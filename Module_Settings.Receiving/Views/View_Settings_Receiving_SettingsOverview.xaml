<Page
    x:Class="MTM_Receiving_Application.Module_Settings.Receiving.Views.View_Settings_Receiving_SettingsOverview"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer>
        <Grid Padding="24">
            <StackPanel HorizontalAlignment="Center" Width="960" Spacing="16">
                <TextBlock Text="Receiving Overview" Style="{StaticResource TitleTextBlockStyle}" />
                <TextBlock Text="Review the current Receiving configuration and jump to common sections."
                           Style="{StaticResource BodyTextBlockStyle}"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                           TextWrapping="Wrap" />

                <Border Padding="16"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Summary" Style="{StaticResource SubtitleTextBlockStyle}" />

                        <Grid RowSpacing="8" ColumnSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="220" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Default Mode"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       ToolTipService.ToolTip="This is the mode the app will start with when you begin receiving." />
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{x:Bind ViewModel.DefaultReceivingMode, Mode=OneWay}" />

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="Auto-Save"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       ToolTipService.ToolTip="If auto-save is on, the app will save your work for you automatically." />
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{x:Bind ViewModel.AutoSaveEnabledSummary, Mode=OneWay}" />

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="ERP Sync"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       ToolTipService.ToolTip="If ERP sync is on, the app can pull or send information to the ERP system." />
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{x:Bind ViewModel.ErpSyncEnabledSummary, Mode=OneWay}" />
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Padding="16"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Quick Actions" Style="{StaticResource SubtitleTextBlockStyle}" />
                        <Grid ColumnSpacing="12" RowSpacing="12">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Button Grid.Row="0" Grid.Column="0" Content="Defaults" Click="OnDefaultsClicked" />
                            <Button Grid.Row="0" Grid.Column="1" Content="Validation" Click="OnValidationClicked" />
                            <Button Grid.Row="1" Grid.Column="0" Content="Business Rules" Click="OnBusinessRulesClicked" />
                            <Button Grid.Row="1" Grid.Column="1" Content="Integrations" Click="OnIntegrationsClicked" />
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
