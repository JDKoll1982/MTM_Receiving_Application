<Page
    x:Class="MTM_Receiving_Application.Module_Settings.Receiving.Views.View_Settings_Receiving_Integrations"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:MTM_Receiving_Application.Module_Settings.Core.Views.Controls">

    <Grid Padding="24">
        <StackPanel Spacing="12">
            <controls:View_SettingsPlaceholderControl
                TitleText="Receiving ERP Integration"
                DescriptionText="Placeholder UI for integration-related settings." />

            <Expander Header="Notes (what belongs here)" IsExpanded="True">
                <StackPanel Spacing="8" Padding="0,8,0,0">
                    <TextBlock Text="Suggested controls:" Style="{StaticResource BodyStrongTextBlockStyle}" />
                    <TextBlock Text="• Use Infor Visual mock data (Dev/Test) → ToggleSwitch" Style="{StaticResource BodyTextBlockStyle}" />
                    <TextBlock Text="• Default mock PO number (Dev/Test) → TextBox" Style="{StaticResource BodyTextBlockStyle}" />
                    <TextBlock Text="• ERP defaults (UOM, site) → TextBox (System scope)" Style="{StaticResource BodyTextBlockStyle}" />
                    <TextBlock Text="• Connection test (read-only) → Button + InfoBar (results)" Style="{StaticResource BodyTextBlockStyle}" />
                </StackPanel>
            </Expander>
        </StackPanel>
    </Grid>
</Page>
