<Page
    x:Class="MTM_Receiving_Application.Module_Settings.Receiving.Views.View_Settings_Receiving_BusinessRules"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ScrollViewer>
        <Grid Padding="24">
            <StackPanel HorizontalAlignment="Center" Width="960" Spacing="16">
                <Border Padding="16"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Auto-Save" Style="{StaticResource SubtitleTextBlockStyle}" />
                        <ToggleSwitch Header="Auto-Save Enabled"
                                      ToolTipService.ToolTip="When turned on, the app saves your work automatically so you are less likely to lose information."
                                      IsOn="{x:Bind ViewModel.AutoSaveEnabled, Mode=TwoWay}" />
                        <TextBox Header="Auto-Save Interval (Seconds)"
                                 ToolTipService.ToolTip="How often the app auto-saves (in seconds). A smaller number saves more often."
                                 Text="{x:Bind ViewModel.AutoSaveIntervalSeconds, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </Border>

                <Border Padding="16"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Storage" Style="{StaticResource SubtitleTextBlockStyle}" />

                        <Grid ColumnSpacing="12" RowSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <ToggleSwitch Grid.Row="0" Grid.Column="0" Header="Save To Label Table" IsOn="{x:Bind ViewModel.SaveToLabelTableEnabled, Mode=TwoWay}" />
                            <ToggleSwitch Grid.Row="0" Grid.Column="0" Header="Save To Label Table"
                                          ToolTipService.ToolTip="When turned on, the app also saves a copy to a database table (accessible format for reporting)."
                                          IsOn="{x:Bind ViewModel.SaveToLabelTableEnabled, Mode=TwoWay}" />
                            <ToggleSwitch Grid.Row="0" Grid.Column="1" Header="Save To Network Label Table"
                                          ToolTipService.ToolTip="When turned on, the database table copy is saved to a shared network location (if configured)."
                                          IsOn="{x:Bind ViewModel.SaveToNetworkLabelTableEnabled, Mode=TwoWay}" />
                            <ToggleSwitch Grid.Row="1" Grid.Column="0" Header="Save To Database"
                                          ToolTipService.ToolTip="When turned on, the app saves the receiving information into the database for reporting and history."
                                          IsOn="{x:Bind ViewModel.SaveToDatabaseEnabled, Mode=TwoWay}" />
                        </Grid>
                    </StackPanel>
                </Border>

                <Border Padding="16"
                        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8">
                    <StackPanel Spacing="12">
                        <TextBlock Text="Workflow" Style="{StaticResource SubtitleTextBlockStyle}" />

                        <TextBox Header="Default Mode On Startup"
                                 ToolTipService.ToolTip="Which mode the Receiving screen should start in when you open the app."
                                 Text="{x:Bind ViewModel.DefaultModeOnStartup, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                        <Grid ColumnSpacing="12" RowSpacing="8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <ToggleSwitch Grid.Row="0" Grid.Column="0" Header="Remember Last Mode"
                                          ToolTipService.ToolTip="When turned on, the app remembers the last mode you used and starts there next time."
                                          IsOn="{x:Bind ViewModel.RememberLastMode, Mode=TwoWay}" />
                            <ToggleSwitch Grid.Row="0" Grid.Column="1" Header="Confirm Mode Change"
                                          ToolTipService.ToolTip="When turned on, the app asks you to confirm before switching modes."
                                          IsOn="{x:Bind ViewModel.ConfirmModeChange, Mode=TwoWay}" />

                            <ToggleSwitch Grid.Row="1" Grid.Column="0" Header="Auto-Fill Heat/Lot"
                                          ToolTipService.ToolTip="When turned on, the app tries to fill heat/lot automatically when possible."
                                          IsOn="{x:Bind ViewModel.AutoFillHeatLotEnabled, Mode=TwoWay}" />
                            <ToggleSwitch Grid.Row="1" Grid.Column="1" Header="Save Package Type As Default"
                                          ToolTipService.ToolTip="When turned on, the app will remember the last package type you picked and use it next time."
                                          IsOn="{x:Bind ViewModel.SavePackageTypeAsDefault, Mode=TwoWay}" />

                            <ToggleSwitch Grid.Row="2" Grid.Column="0" Header="Show Review Table By Default"
                                          ToolTipService.ToolTip="When turned on, the review table is shown automatically so you can double-check entries."
                                          IsOn="{x:Bind ViewModel.ShowReviewTableByDefault, Mode=TwoWay}" />
                            <ToggleSwitch Grid.Row="2" Grid.Column="1" Header="Allow Edit After Save"
                                          ToolTipService.ToolTip="When turned on, you can change information after saving. Turn off to prevent changes after saving."
                                          IsOn="{x:Bind ViewModel.AllowEditAfterSave, Mode=TwoWay}" />
                        </Grid>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
