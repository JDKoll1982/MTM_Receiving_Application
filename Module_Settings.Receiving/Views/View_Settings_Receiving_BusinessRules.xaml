<Page
    x:Class="MTM_Receiving_Application.Module_Settings.Receiving.Views.View_Settings_Receiving_BusinessRules"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:MTM_Receiving_Application.Module_Settings.Core.Views.Controls">

    <Grid Padding="24">
        <StackPanel Spacing="12">
            <controls:View_SettingsPlaceholderControl
                TitleText="Receiving Business Rules"
                DescriptionText="Placeholder UI for Receiving business rules." />

            <Expander Header="Notes (what belongs here)" IsExpanded="True">
                <StackPanel Spacing="8" Padding="0,8,0,0">
                    <TextBlock Text="Suggested controls:" Style="{StaticResource BodyStrongTextBlockStyle}" />
                    <TextBlock Text="• Part prefix → package type mapping → DataGrid (Prefix, PackageType, Label)" Style="{StaticResource BodyTextBlockStyle}" />
                    <TextBlock Text="• Package type labels → TextBox or ComboBox" Style="{StaticResource BodyTextBlockStyle}" />
                    <TextBlock Text="• Preview of how labels will render → ContentPresenter / Sample card" Style="{StaticResource BodyTextBlockStyle}" />
                </StackPanel>
            </Expander>
        </StackPanel>
    </Grid>
</Page>
