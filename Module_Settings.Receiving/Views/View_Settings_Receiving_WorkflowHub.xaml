<Page
    x:Class="MTM_Receiving_Application.Module_Settings.Receiving.Views.View_Settings_Receiving_WorkflowHub"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Padding="24" RowSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Spacing="4">
            <TextBlock Text="Receiving Workflow" Style="{StaticResource TitleTextBlockStyle}" />
            <TextBlock Text="Placeholder hub for Receiving settings workflows."
                       Style="{StaticResource BodyTextBlockStyle}" />
        </StackPanel>

        <Grid Grid.Row="1" RowSpacing="16" ColumnSpacing="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

                <Button Grid.Row="0" Grid.Column="0" IsEnabled="False"
                    Width="280" Height="180"
                    Padding="20"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                <StackPanel Spacing="12">
                    <FontIcon Glyph="&#xE8D4;" FontSize="36" Foreground="{ThemeResource AccentFillColorDefaultBrush}" />
                    <TextBlock Text="Overview" Style="{StaticResource SubtitleTextBlockStyle}" HorizontalAlignment="Center" />
                    <TextBlock Text="Summary of receiving defaults and workflow status."
                               Style="{StaticResource BodyTextBlockStyle}"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>
            </Button>

                <Button Grid.Row="0" Grid.Column="1" IsEnabled="False"
                    Width="280" Height="180"
                    Padding="20"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                <StackPanel Spacing="12">
                    <FontIcon Glyph="&#xE8D7;" FontSize="36" Foreground="{ThemeResource AccentFillColorDefaultBrush}" />
                    <TextBlock Text="Defaults" Style="{StaticResource SubtitleTextBlockStyle}" HorizontalAlignment="Center" />
                    <TextBlock Text="Configure default entries and automation rules."
                               Style="{StaticResource BodyTextBlockStyle}"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>
            </Button>

                <Button Grid.Row="0" Grid.Column="2" IsEnabled="False"
                    Width="280" Height="180"
                    Padding="20"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                <StackPanel Spacing="12">
                    <FontIcon Glyph="&#xE8FA;" FontSize="36" Foreground="{ThemeResource AccentFillColorDefaultBrush}" />
                    <TextBlock Text="Validation" Style="{StaticResource SubtitleTextBlockStyle}" HorizontalAlignment="Center" />
                    <TextBlock Text="Review validation rules and input constraints."
                               Style="{StaticResource BodyTextBlockStyle}"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>
            </Button>

                <Button Grid.Row="1" Grid.Column="0" IsEnabled="False"
                    Width="280" Height="180"
                    Padding="20"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                <StackPanel Spacing="12">
                    <FontIcon Glyph="&#xE7EF;" FontSize="36" Foreground="{ThemeResource AccentFillColorDefaultBrush}" />
                    <TextBlock Text="Permissions" Style="{StaticResource SubtitleTextBlockStyle}" HorizontalAlignment="Center" />
                    <TextBlock Text="Role-based access to receiving actions."
                               Style="{StaticResource BodyTextBlockStyle}"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>
            </Button>

                <Button Grid.Row="1" Grid.Column="1" IsEnabled="False"
                    Width="280" Height="180"
                    Padding="20"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                <StackPanel Spacing="12">
                    <FontIcon Glyph="&#xE9F9;" FontSize="36" Foreground="{ThemeResource AccentFillColorDefaultBrush}" />
                    <TextBlock Text="Audit" Style="{StaticResource SubtitleTextBlockStyle}" HorizontalAlignment="Center" />
                    <TextBlock Text="Audit trails for receiving workflow changes."
                               Style="{StaticResource BodyTextBlockStyle}"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>
            </Button>

                <Button Grid.Row="1" Grid.Column="2" IsEnabled="False"
                    Width="280" Height="180"
                    Padding="20"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                <StackPanel Spacing="12">
                    <FontIcon Glyph="&#xE8B3;" FontSize="36" Foreground="{ThemeResource AccentFillColorDefaultBrush}" />
                    <TextBlock Text="Integrations" Style="{StaticResource SubtitleTextBlockStyle}" HorizontalAlignment="Center" />
                    <TextBlock Text="Integrations and export settings for receiving."
                               Style="{StaticResource BodyTextBlockStyle}"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Page>
