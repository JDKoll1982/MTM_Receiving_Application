<Page
    x:Class="MTM_Receiving_Application.Module_Settings.Receiving.Views.View_Settings_Receiving_Validation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:MTM_Receiving_Application.Module_Settings.Core.Views.Controls">

    <Grid Padding="24">
        <StackPanel Spacing="12">
            <controls:View_SettingsPlaceholderControl
                TitleText="Receiving Validation"
                DescriptionText="Placeholder UI for Receiving validation-related settings." />

            <Expander Header="Notes (what belongs here)" IsExpanded="True">
                <StackPanel Spacing="8" Padding="0,8,0,0">
                    <TextBlock Text="Suggested controls:" Style="{StaticResource BodyStrongTextBlockStyle}" />
                    <TextBlock Text="• Infor Visual validation toggles/defaults → ToggleSwitch" Style="{StaticResource BodyTextBlockStyle}" />
                    <TextBlock Text="• Validation thresholds/delays (if any) → NumberBox" Style="{StaticResource BodyTextBlockStyle}" />
                    <TextBlock Text="• Read-only warnings around ERP constraints → InfoBar" Style="{StaticResource BodyTextBlockStyle}" />
                </StackPanel>
            </Expander>
        </StackPanel>
    </Grid>
</Page>
