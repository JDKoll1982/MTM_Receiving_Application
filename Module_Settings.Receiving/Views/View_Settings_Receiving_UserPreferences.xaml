<Page
    x:Class="MTM_Receiving_Application.Module_Settings.Receiving.Views.View_Settings_Receiving_UserPreferences"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:MTM_Receiving_Application.Module_Settings.Core.Views.Controls">

        <ScrollViewer>
            <Grid Padding="24">
                <StackPanel HorizontalAlignment="Center" Width="960" Spacing="16">
                    <TextBlock Text="Receiving User Preferences" Style="{StaticResource TitleTextBlockStyle}" />
                    <TextBlock Text="User-scoped preferences for Receiving. (UI pending implementation)"
                               Style="{StaticResource BodyTextBlockStyle}"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               TextWrapping="Wrap" />

                    <controls:View_SettingsPlaceholderControl
                        TitleText="Preferences"
                        DescriptionText="This area will contain user-specific Receiving preferences." />
                </StackPanel>
            </Grid>
        </ScrollViewer>
</Page>
