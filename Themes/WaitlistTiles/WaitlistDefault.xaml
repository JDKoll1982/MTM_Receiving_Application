<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Key="WaitlistTileDefault">
        <Border x:Name="WaitlistControl"
                Padding="3,3,3,3"
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                BorderBrush="Black" BorderThickness="0"
                CornerRadius="5"
                SnapsToDevicePixels="True">

            <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                  Grid.IsSharedSizeScope="True">

                <Border x:Name="WaitlistControl2"
                        Height="auto"
                        HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                        BorderBrush="Black" BorderThickness="1,1,1,1"
                        CornerRadius="5">

                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Color="White"/>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Status}" Value="Overdue!">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <SolidColorBrush Color="#50FF0000"/>
                                        </Setter.Value>
                                    </Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>

                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                          ShowGridLines="False">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="50*" />
                            <RowDefinition Height="10" />
                            <RowDefinition Height="50*" />
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50*" />
                                <!--  Press Number  -->
                                <ColumnDefinition Width="50*" />
                                <!--  Job Type  -->
                                <ColumnDefinition Width="50*" />
                                <!--  Remaining Time  -->
                                <ColumnDefinition Width="50*" />
                                <!--  Status  -->
                                <ColumnDefinition Width="50*" />
                                <!--  Material Handler  -->
                            </Grid.ColumnDefinitions>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       FontSize="16" FontWeight="Bold"
                                       Text="Press Number"
                                       TextDecorations="Underline" />

                            <TextBlock Grid.Row="0" Grid.Column="1"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       FontSize="16" FontWeight="Bold"
                                       Text="Job Type"
                                       TextDecorations="Underline" />

                            <TextBlock Grid.Row="0" Grid.Column="2"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       FontSize="16" FontWeight="Bold"
                                       Text="Remaining Time"
                                       TextDecorations="Underline" />

                            <TextBlock Grid.Row="0" Grid.Column="3"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       FontSize="16" FontWeight="Bold"
                                       Text="Status"
                                       TextDecorations="Underline" />

                            <TextBlock Grid.Row="0" Grid.Column="4"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       FontSize="16" FontWeight="Bold"
                                       Text="Material Handler"
                                       TextDecorations="Underline" />

                            <TextBlock x:Name="WorkCenterDisplay"
                                       Grid.Row="2" Grid.Column="0"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Text="{Binding WorkCenter}" />

                            <TextBlock x:Name="RequestTypeDisplay"
                                       Grid.Row="2" Grid.Column="1"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Text="{Binding RequestType}" />
                            <TextBlock x:Name="TimeRemainingDisplay"
                                       Grid.Row="2" Grid.Column="2"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Text="{Binding TimeRemaining}">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Status}" Value="Overdue!">
                                                <Setter Property="Foreground" Value="Red"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <TextBlock x:Name="TextBlockValueDisplay"
                                       Grid.Row="2" Grid.Column="2"
                                       Visibility="Hidden"
                                          Text="{Binding TimeRemainingValue}"/>

                            <TextBlock x:Name="StatusDisplay"
                                       Grid.Row="2" Grid.Column="3"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Text="{Binding Status}" />

                            <TextBlock x:Name="MHandlerDisplay"
                                       Grid.Row="2" Grid.Column="4"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"
                                       Text="{Binding MHandler}" />
                        </Grid>

                        <Grid Grid.Row="2">
                            <TextBlock Grid.Column="0"
                                       x:Name="RequestDisplay"
                                       Grid.Row="0"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Text="{Binding Request}" />
                        </Grid>

                    </Grid>

                </Border>

            </Grid>

        </Border>
    </DataTemplate>

</ResourceDictionary>
