{
    "AppSettings": {
        "UseInforVisualMockData": false,
        "Environment": "Production",
        "DefaultMockPONumber": "PO-066868"
    },
    "Application": {
        "ApplicationName": "MTM Receiving Application",
        "Environment": "Production",
        "Version": "1.0.0",
        "EnableTelemetry": true
    },
    "InforVisual": {
        "UseMockData": false,
        "ConnectionTimeoutSeconds": 30,
        "QueryTimeoutSeconds": 120
    },
    "ConnectionStrings": {
        "MySql": "Server=172.16.1.104;Port=3306;Database=mtm_receiving_application;Uid=root;Pwd=root;CharSet=utf8mb4;",
        "InforVisual": "Server=VISUAL;Database=MTMFG;User Id=SHOP2;Password=SHOP;TrustServerCertificate=True;ApplicationIntent=ReadOnly;"
    },
    "Serilog": {
        "Using": [
            "Serilog.Sinks.File"
        ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "logs/app-.txt",
                    "rollingInterval": "Day",
                    "retainedFileCountLimit": 30,
                    "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff} [{Level:u3}] [{SourceContext}] [{Properties}] {Message:lj}{NewLine}{Exception}"
                }
            }
        ],
        "Enrich": [
            "WithMachineName",
            "WithThreadId"
        ],
        "Properties": {
            "Application": "MTM_Receiving_Application"
        }
    },
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning"
        }
    }
}