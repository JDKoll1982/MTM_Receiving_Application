<Page
    x:Class="MTM_Receiving_Application.Module_Settings.Dunnage.Views.View_Settings_Dunnage_UiUx"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:MTM_Receiving_Application.Module_Settings.Core.Views.Controls">

    <Grid Padding="24">
        <StackPanel Spacing="12">
            <controls:View_SettingsPlaceholderControl
                TitleText="Dunnage UI / UX"
                DescriptionText="Placeholder UI for device- and UX-tuning settings." />

            <Expander Header="Notes (what belongs here)" IsExpanded="True">
                <StackPanel Spacing="8" Padding="0,8,0,0">
                    <TextBlock Text="Suggested controls:" Style="{StaticResource BodyStrongTextBlockStyle}" />
                    <TextBlock Text="• Manual entry grid selection delay (ms) → NumberBox" Style="{StaticResource BodyTextBlockStyle}" />
                    <TextBlock Text="• Any additional UI timing toggles → NumberBox / ToggleSwitch" Style="{StaticResource BodyTextBlockStyle}" />
                </StackPanel>
            </Expander>
        </StackPanel>
    </Grid>
</Page>
