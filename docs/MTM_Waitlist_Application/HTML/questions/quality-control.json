            "max": 50
        },
        {
            "id": "favorites_duration",
            "type": "number",
            "question": "How many days should favorites be kept?",
            "placeholder": "60",
            "min": 1,
            "max": 90
        },
        {
            "id": "timeout_office",
            "type": "range",
            "question": "Auto-logout timeout for QC workstations?",
            "description": "Longer timeout for inspection documentation",
