<Page
    x:Class="MTM_Receiving_Application.Module_Receiving.Views.Hub.View_Receiving_Hub_Display_ModeSelection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Padding="24" RowSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" RowSpacing="16" ColumnSpacing="16" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Grid.Row="0" Grid.Column="0"
                Click="OnSelectWizardMode"
                Width="280" Height="180"
                Padding="20"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8">
                <StackPanel Spacing="12">
                    <FontIcon Glyph="&#xE771;" FontSize="40" Foreground="{ThemeResource AccentFillColorDefaultBrush}" />
                    <TextBlock Text="Wizard Mode" Style="{StaticResource SubtitleTextBlockStyle}" HorizontalAlignment="Center" />
                    <TextBlock Text="Guided 3-step workflow for streamlined receiving"
                               Style="{StaticResource BodyTextBlockStyle}"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>
            </Button>

            <Button Grid.Row="0" Grid.Column="1"
                Click="OnSelectManualMode"
                Width="280" Height="180"
                Padding="20"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8">
                <StackPanel Spacing="12">
                    <FontIcon Glyph="&#xE7F0;" FontSize="40" Foreground="{ThemeResource AccentFillColorDefaultBrush}" />
                    <TextBlock Text="Manual Entry" Style="{StaticResource SubtitleTextBlockStyle}" HorizontalAlignment="Center" />
                    <TextBlock Text="Direct data grid entry for experienced users"
                               Style="{StaticResource BodyTextBlockStyle}"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>
            </Button>

            <Button Grid.Row="0" Grid.Column="2"
                Click="OnSelectEditMode"
                Width="280" Height="180"
                Padding="20"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8">
                <StackPanel Spacing="12">
                    <FontIcon Glyph="&#xE70F;" FontSize="40" Foreground="{ThemeResource AccentFillColorDefaultBrush}" />
                    <TextBlock Text="Edit Mode" Style="{StaticResource SubtitleTextBlockStyle}" HorizontalAlignment="Center" />
                    <TextBlock Text="View and edit historical transactions"
                               Style="{StaticResource BodyTextBlockStyle}"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Page>
