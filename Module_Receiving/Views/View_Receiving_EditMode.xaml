<UserControl
    x:Class="MTM_Receiving_Application.Module_Receiving.Views.View_Receiving_EditMode"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:viewmodels="using:MTM_Receiving_Application.Module_Receiving.ViewModels"
    xmlns:enums="using:MTM_Receiving_Application.Module_Core.Models.Enums"
    xmlns:converters="using:MTM_Receiving_Application.Module_Core.Converters"
    mc:Ignorable="d"
    x:Name="Root">

    <UserControl.Resources>
        <converters:Converter_DecimalToString      x:Key="DecimalToStringConverter"/>
        <converters:Converter_DateTimeToString      x:Key="DateTimeToStringConverter"/>
        <converters:Converter_PartIDToQualityHoldBrush x:Key="PartIDToQualityHoldBrushConverter"/>
        <converters:Converter_PartIDToQualityHoldTextColor x:Key="PartIDToQualityHoldTextColorConverter"/>
    </UserControl.Resources>

    <Grid Padding="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Row 0: main toolbar -->
            <RowDefinition Height="Auto"/>  <!-- Row 1: date filter toolbar -->
            <RowDefinition Height="Auto"/>  <!-- Row 2: search bar + result summary -->
            <RowDefinition Height="*"/>     <!-- Row 3: data grid -->
            <RowDefinition Height="Auto"/>  <!-- Row 4: footer (pagination + save) -->
        </Grid.RowDefinitions>

        <!-- ============================================================ Row 0: Main Toolbar -->
        <Grid Grid.Row="0" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">

                <!-- Load Data Section -->
                <TextBlock Text="{x:Bind ViewModel.EditModeLoadDataFromText, Mode=OneWay}"
                           VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,4,0"/>

                <Button Command="{x:Bind ViewModel.LoadFromCurrentMemoryCommand}"
                        ToolTipService.ToolTip="{x:Bind ViewModel.GetTooltip('Button.LoadSessionMemory'), Mode=OneWay}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE8A7;"/>
                        <TextBlock Text="{x:Bind ViewModel.EditModeCurrentMemoryText, Mode=OneWay}"/>
                    </StackPanel>
                </Button>

                <Button Command="{x:Bind ViewModel.LoadFromCurrentLabelsCommand}"
                        ToolTipService.ToolTip="{x:Bind ViewModel.GetTooltip('Button.LoadRecentCSV'), Mode=OneWay}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE8E5;"/>
                        <TextBlock Text="{x:Bind ViewModel.EditModeCurrentLabelsText, Mode=OneWay}"/>
                    </StackPanel>
                </Button>

                <Button Command="{x:Bind ViewModel.LoadFromHistoryCommand}"
                        ToolTipService.ToolTip="{x:Bind ViewModel.GetTooltip('Button.LoadHistoricalData'), Mode=OneWay}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE74C;"/>
                        <TextBlock Text="{x:Bind ViewModel.EditModeHistoryText, Mode=OneWay}"/>
                    </StackPanel>
                </Button>

                <!-- Separator -->
                <Rectangle Width="1" Height="24"
                           Fill="{ThemeResource SystemControlForegroundBaseLowBrush}" Margin="8,0"/>

                <!-- Edit Actions -->
                <Button Command="{x:Bind ViewModel.SelectAllCommand}"
                        ToolTipService.ToolTip="{x:Bind ViewModel.GetTooltip('Button.SelectAll'), Mode=OneWay}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE8B3;"/>
                        <TextBlock Text="{x:Bind ViewModel.SelectAllButtonText, Mode=OneWay}"/>
                    </StackPanel>
                </Button>

                <Button Command="{x:Bind ViewModel.RemoveRowCommand}"
                        ToolTipService.ToolTip="{x:Bind ViewModel.GetTooltip('Button.RemoveRow'), Mode=OneWay}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE74D;"/>
                        <TextBlock Text="{x:Bind ViewModel.EditModeRemoveRowText, Mode=OneWay}"/>
                    </StackPanel>
                </Button>

                <!-- Separator -->
                <Rectangle Width="1" Height="24"
                           Fill="{ThemeResource SystemControlForegroundBaseLowBrush}" Margin="8,0"/>

                <!-- Column Chooser -->
                <Button x:Name="ColumnsButton"
                        ToolTipService.ToolTip="Choose visible columns"
                        Click="ColumnsButton_Click">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xE71D;"/>
                        <TextBlock Text="Columns"/>
                    </StackPanel>
                </Button>

            </StackPanel>

            <!-- Help button (right-aligned) -->
            <Button Grid.Column="1"
                    Command="{x:Bind ViewModel.ShowHelpCommand}"
                    ToolTipService.ToolTip="Help"
                    VerticalAlignment="Center">
                <FontIcon Glyph="&#xE897;"/>
            </Button>
        </Grid>

        <!-- ============================================================ Row 1: Date Filter Toolbar -->
        <Grid Grid.Row="1" Margin="0,0,0,12">
            <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                <TextBlock Text="{x:Bind ViewModel.EditModeFilterDateText, Mode=OneWay}"
                           VerticalAlignment="Center" FontWeight="SemiBold"/>

                <CalendarDatePicker Date="{x:Bind ViewModel.FilterStartDate, Mode=TwoWay}"
                                    PlaceholderText="{x:Bind ViewModel.GetPlaceholder('Field.StartDate'), Mode=OneWay}"
                                    Width="140"/>
                <TextBlock Text="{x:Bind ViewModel.EditModeToText, Mode=OneWay}" VerticalAlignment="Center"/>
                <CalendarDatePicker Date="{x:Bind ViewModel.FilterEndDate, Mode=TwoWay}"
                                    PlaceholderText="{x:Bind ViewModel.GetPlaceholder('Field.EndDate'), Mode=OneWay}"
                                    Width="140"/>

                <Rectangle Width="1" Height="24"
                           Fill="{ThemeResource SystemControlForegroundBaseLowBrush}" Margin="8,0"/>

                <Button Content="{x:Bind ViewModel.EditModeLastWeekText, Mode=OneWay}"
                        Command="{x:Bind ViewModel.SetFilterLastWeekCommand}"
                        ToolTipService.ToolTip="{x:Bind ViewModel.GetTooltip('Button.FilterLastWeek'), Mode=OneWay}"/>
                <Button Content="{x:Bind ViewModel.EditModeTodayText, Mode=OneWay}"
                        Command="{x:Bind ViewModel.SetFilterTodayCommand}"
                        ToolTipService.ToolTip="{x:Bind ViewModel.GetTooltip('Button.FilterToday'), Mode=OneWay}"/>
                <Button Content="{x:Bind ViewModel.EditModeThisWeekText, Mode=OneWay}"
                        Command="{x:Bind ViewModel.SetFilterThisWeekCommand}"
                        ToolTipService.ToolTip="{x:Bind ViewModel.GetTooltip('Button.FilterThisWeek'), Mode=OneWay}"/>
                <Button Content="{x:Bind ViewModel.ThisMonthButtonText, Mode=OneWay}"
                        Command="{x:Bind ViewModel.SetFilterThisMonthCommand}"
                        ToolTipService.ToolTip="{x:Bind ViewModel.GetTooltip('Button.FilterThisMonth'), Mode=OneWay}"/>
                <Button Content="{x:Bind ViewModel.ThisQuarterButtonText, Mode=OneWay}"
                        Command="{x:Bind ViewModel.SetFilterThisQuarterCommand}"
                        ToolTipService.ToolTip="{x:Bind ViewModel.GetTooltip('Button.FilterThisQuarter'), Mode=OneWay}"/>
                <Button Content="{x:Bind ViewModel.EditModeShowAllText, Mode=OneWay}"
                        Command="{x:Bind ViewModel.SetFilterShowAllCommand}"
                        ToolTipService.ToolTip="{x:Bind ViewModel.GetTooltip('Button.ClearFilters'), Mode=OneWay}"/>
            </StackPanel>
        </Grid>

        <!-- ============================================================ Row 2: Search Bar + Result Summary -->
        <Grid Grid.Row="2" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- "Search by" label -->
            <TextBlock Grid.Column="0" Text="Search by:"
                       VerticalAlignment="Center" Margin="0,0,8,0"/>

            <!-- Column selector -->
            <ComboBox Grid.Column="1"
                      ItemsSource="{x:Bind ViewModel.SearchByOptions}"
                      SelectedItem="{x:Bind ViewModel.SearchByColumnKey, Mode=TwoWay}"
                      MinWidth="130"/>

            <!-- Small separator -->
            <Rectangle Grid.Column="2" Width="1" Height="20"
                       Fill="{ThemeResource SystemControlForegroundBaseLowBrush}" Margin="8,0"/>

            <!-- Search TextBox with overlay clear button -->
            <Grid Grid.Column="3" Width="280">
                <TextBox x:Name="SearchBox"
                         PlaceholderText="Type to filter&#x2026;"
                         Text="{x:Bind ViewModel.SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Padding="8,5,40,5"/>
                <Button HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Width="32" Height="32"
                        Padding="0" Margin="0,0,2,0"
                        BorderThickness="0" Background="Transparent"
                        Command="{x:Bind ViewModel.ClearSearchCommand}"
                        Visibility="{x:Bind ViewModel.HasSearchText, Mode=OneWay}"
                        ToolTipService.ToolTip="Clear search">
                    <FontIcon Glyph="&#xE711;" FontSize="11"/>
                </Button>
            </Grid>

            <!-- Result summary -->
            <TextBlock Grid.Column="5"
                       Text="{x:Bind ViewModel.ResultSummary, Mode=OneWay}"
                       VerticalAlignment="Center"
                       Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"
                       FontStyle="Italic"
                       Margin="12,0,0,0"/>
        </Grid>

        <!-- ============================================================ Row 3: Data Grid -->
        <controls:DataGrid Grid.Row="3"
                           x:Name="EditModeDataGrid"
                           ItemsSource="{x:Bind ViewModel.Loads, Mode=OneWay}"
                           SelectedItem="{x:Bind ViewModel.SelectedLoad, Mode=TwoWay}"
                           AutoGenerateColumns="False"
                           IsReadOnly="False"
                           CanUserSortColumns="True"
                           GridLinesVisibility="All"
                           HeadersVisibility="Column"
                           SelectionMode="Single"
                           Sorting="EditModeDataGrid_Sorting"
                           KeyDown="EditModeDataGrid_KeyDown"
                           CurrentCellChanged="EditModeDataGrid_CurrentCellChanged"
                           Tapped="EditModeDataGrid_Tapped">
            <controls:DataGrid.Columns>

                <!-- Checkbox column — always visible -->
                <controls:DataGridTemplateColumn Header="" Width="50" CanUserResize="False" Tag="Checkbox">
                    <controls:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"
                                      MinWidth="0" Margin="0"/>
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellTemplate>
                </controls:DataGridTemplateColumn>

                <!-- LoadNumber — always visible -->
                <controls:DataGridTextColumn Tag="LoadNumber"
                    Header="{x:Bind ViewModel.EditModeColumnLoadNumberText, Mode=OneWay}"
                    Binding="{Binding LoadNumber}" IsReadOnly="True" Width="Auto"/>

                <!-- ReceivedDate -->
                <controls:DataGridTextColumn Tag="ReceivedDate"
                    Header="Received Date"
                    Binding="{Binding ReceivedDate, Converter={StaticResource DateTimeToStringConverter}}"
                    IsReadOnly="True" Width="Auto"/>

                <!-- PartID — always visible, quality-hold coloured -->
                <controls:DataGridTemplateColumn Tag="PartID"
                    Header="{x:Bind ViewModel.EditModeColumnPartIdText, Mode=OneWay}" Width="*">
                    <controls:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding PartID}"
                                       Foreground="{Binding PartID, Converter={StaticResource PartIDToQualityHoldTextColorConverter}}"
                                       VerticalAlignment="Center" Padding="12,0"/>
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellTemplate>
                    <controls:DataGridTemplateColumn.CellEditingTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding PartID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                     BorderThickness="0" VerticalAlignment="Stretch"/>
                        </DataTemplate>
                    </controls:DataGridTemplateColumn.CellEditingTemplate>
                </controls:DataGridTemplateColumn>

                <!-- PartType -->
                <controls:DataGridTextColumn Tag="PartType"
                    Header="Part Type" Binding="{Binding PartType}" Width="Auto"/>

                <!-- PONumber -->
                <controls:DataGridTextColumn Tag="PONumber"
                    Header="PO Number" Binding="{Binding PoNumber}" Width="Auto"/>

                <!-- POLineNumber -->
                <controls:DataGridTextColumn Tag="POLineNumber"
                    Header="PO Line #" Binding="{Binding PoLineNumber}" IsReadOnly="True" Width="Auto"/>

                <!-- WeightQuantity -->
                <controls:DataGridTextColumn Tag="WeightQuantity"
                    Header="{x:Bind ViewModel.EditModeColumnWeightQtyText, Mode=OneWay}"
                    Binding="{Binding WeightQuantity, Converter={StaticResource DecimalToStringConverter}}" Width="Auto"/>

                <!-- HeatLotNumber -->
                <controls:DataGridTextColumn Tag="HeatLotNumber"
                    Header="{x:Bind ViewModel.EditModeColumnHeatLotText, Mode=OneWay}"
                    Binding="{Binding HeatLotNumber}" Width="Auto"/>

                <!-- RemainingQuantity -->
                <controls:DataGridTextColumn Tag="RemainingQuantity"
                    Header="Remaining Qty"
                    Binding="{Binding RemainingQuantity, Converter={StaticResource DecimalToStringConverter}}"
                    IsReadOnly="True" Width="Auto"/>

                <!-- PackagesPerLoad -->
                <controls:DataGridTextColumn Tag="PackagesPerLoad"
                    Header="{x:Bind ViewModel.EditModeColumnPkgsPerLoadText, Mode=OneWay}"
                    Binding="{Binding PackagesPerLoad}" Width="Auto"/>

                <!-- PackageType -->
                <controls:DataGridTextColumn Tag="PackageType"
                    Header="{x:Bind ViewModel.EditModeColumnPkgTypeText, Mode=OneWay}"
                    Binding="{Binding PackageTypeName}" IsReadOnly="True" Width="Auto"/>

                <!-- WeightPerPackage -->
                <controls:DataGridTextColumn Tag="WeightPerPackage"
                    Header="{x:Bind ViewModel.EditModeColumnWtPerPkgText, Mode=OneWay}"
                    Binding="{Binding WeightPerPackage, Converter={StaticResource DecimalToStringConverter}}"
                    IsReadOnly="True" Width="Auto"/>

                <!-- IsNonPOItem -->
                <controls:DataGridCheckBoxColumn Tag="IsNonPOItem"
                    Header="Non-PO?" Binding="{Binding IsNonPOItem}" IsReadOnly="True" Width="Auto"/>

                <!-- UserId -->
                <controls:DataGridTextColumn Tag="UserId"
                    Header="User" Binding="{Binding UserId}" IsReadOnly="True" Width="Auto"/>

                <!-- EmployeeNumber -->
                <controls:DataGridTextColumn Tag="EmployeeNumber"
                    Header="Employee #" Binding="{Binding EmployeeNumber}" IsReadOnly="True" Width="Auto"/>

                <!-- IsQualityHoldRequired -->
                <controls:DataGridCheckBoxColumn Tag="IsQualityHoldRequired"
                    Header="QH Required?" Binding="{Binding IsQualityHoldRequired}" IsReadOnly="True" Width="Auto"/>

                <!-- IsQualityHoldAcknowledged -->
                <controls:DataGridCheckBoxColumn Tag="IsQualityHoldAcknowledged"
                    Header="QH Acknowledged?" Binding="{Binding IsQualityHoldAcknowledged}" IsReadOnly="True" Width="Auto"/>

                <!-- QualityHoldRestrictionType -->
                <controls:DataGridTextColumn Tag="QualityHoldRestrictionType"
                    Header="QH Restriction" Binding="{Binding QualityHoldRestrictionType}" IsReadOnly="True" Width="Auto"/>

                <!-- PartDescription -->
                <controls:DataGridTextColumn Tag="PartDescription"
                    Header="Part Description" Binding="{Binding PartDescription}" IsReadOnly="True" Width="Auto"/>

                <!-- UnitOfMeasure -->
                <controls:DataGridTextColumn Tag="UnitOfMeasure"
                    Header="UOM" Binding="{Binding UnitOfMeasure}" IsReadOnly="True" Width="Auto"/>

                <!-- QtyOrdered -->
                <controls:DataGridTextColumn Tag="QtyOrdered"
                    Header="Qty Ordered"
                    Binding="{Binding QtyOrdered, Converter={StaticResource DecimalToStringConverter}}"
                    IsReadOnly="True" Width="Auto"/>

                <!-- POVendor -->
                <controls:DataGridTextColumn Tag="POVendor"
                    Header="Vendor" Binding="{Binding PoVendor}" IsReadOnly="True" Width="Auto"/>

                <!-- POStatus -->
                <controls:DataGridTextColumn Tag="POStatus"
                    Header="PO Status" Binding="{Binding PoStatus}" IsReadOnly="True" Width="Auto"/>

                <!-- PODueDate -->
                <controls:DataGridTextColumn Tag="PODueDate"
                    Header="PO Due Date"
                    Binding="{Binding PoDueDate, Converter={StaticResource DateTimeToStringConverter}}"
                    IsReadOnly="True" Width="Auto"/>

            </controls:DataGrid.Columns>
        </controls:DataGrid>

        <!-- ============================================================ Row 4: Footer (Pagination + Save) -->
        <Grid Grid.Row="4" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Pagination Controls -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <Button Command="{x:Bind ViewModel.FirstPageCommand}"
                        ToolTipService.ToolTip="{x:Bind ViewModel.GetTooltip('Button.FirstPage'), Mode=OneWay}">
                    <FontIcon Glyph="&#xE892;"/>
                </Button>
                <Button Command="{x:Bind ViewModel.PreviousPageCommand}"
                        ToolTipService.ToolTip="{x:Bind ViewModel.GetTooltip('Button.PreviousPage'), Mode=OneWay}">
                    <FontIcon Glyph="&#xE76B;"/>
                </Button>

                <Rectangle Width="1" Height="24"
                           Fill="{ThemeResource SystemControlForegroundBaseLowBrush}" Margin="8,0"/>

                <TextBlock Text="{x:Bind ViewModel.EditModePageText, Mode=OneWay}" VerticalAlignment="Center"/>
                <TextBox x:Name="GoToPageTextBox"
                         Text="{x:Bind ViewModel.GotoPageNumber, Mode=TwoWay}"
                         Width="60" HorizontalContentAlignment="Center"
                         KeyDown="GoToPageTextBox_KeyDown"/>
                <TextBlock Text="{x:Bind ViewModel.EditModeOfText, Mode=OneWay}" VerticalAlignment="Center"/>
                <TextBlock Text="{x:Bind ViewModel.TotalPages, Mode=OneWay}"
                           VerticalAlignment="Center" FontWeight="SemiBold"/>

                <Button Content="{x:Bind ViewModel.EditModeGoText, Mode=OneWay}"
                        Command="{x:Bind ViewModel.GoToPageCommand}"
                        ToolTipService.ToolTip="{x:Bind ViewModel.GetTooltip('Button.GoToPage'), Mode=OneWay}"/>

                <Rectangle Width="1" Height="24"
                           Fill="{ThemeResource SystemControlForegroundBaseLowBrush}" Margin="8,0"/>

                <Button Command="{x:Bind ViewModel.NextPageCommand}"
                        ToolTipService.ToolTip="{x:Bind ViewModel.GetTooltip('Button.NextPage'), Mode=OneWay}">
                    <FontIcon Glyph="&#xE76C;"/>
                </Button>
                <Button Command="{x:Bind ViewModel.LastPageCommand}"
                        ToolTipService.ToolTip="{x:Bind ViewModel.GetTooltip('Button.LastPage'), Mode=OneWay}">
                    <FontIcon Glyph="&#xE893;"/>
                </Button>
            </StackPanel>

            <!-- Page size selector -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="6"
                        VerticalAlignment="Center" Margin="8,0">
                <TextBlock Text="Per page:" VerticalAlignment="Center"
                           Foreground="{ThemeResource SystemControlForegroundBaseMediumBrush}"/>
                <ComboBox ItemsSource="{x:Bind ViewModel.PageSizeOptions}"
                          SelectedItem="{x:Bind ViewModel.SelectedPageSize, Mode=TwoWay}"
                          MinWidth="70"/>
            </StackPanel>

            <!-- Save button -->
            <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="12">
                <Button Content="{x:Bind ViewModel.EditModeSaveAndFinishText, Mode=OneWay}"
                        Command="{x:Bind ViewModel.SaveCommand}"
                        Style="{StaticResource AccentButtonStyle}"
                        ToolTipService.ToolTip="{x:Bind ViewModel.GetTooltip('Button.SaveAndFinish'), Mode=OneWay}"/>
            </StackPanel>
        </Grid>

        <!-- ============================================================ IsBusy Overlay -->
        <Grid Grid.RowSpan="5" Visibility="{x:Bind ViewModel.IsBusy, Mode=OneWay}">
            <Rectangle Fill="{ThemeResource ApplicationPageBackgroundThemeBrush}" Opacity="0.7"/>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="16">
                <ProgressRing IsActive="{x:Bind ViewModel.IsBusy, Mode=OneWay}"
                              Width="48" Height="48"/>
                <TextBlock Text="{x:Bind ViewModel.StatusMessage, Mode=OneWay}"
                           HorizontalAlignment="Center"
                           FontSize="14"/>
            </StackPanel>
        </Grid>

    </Grid>
</UserControl>
