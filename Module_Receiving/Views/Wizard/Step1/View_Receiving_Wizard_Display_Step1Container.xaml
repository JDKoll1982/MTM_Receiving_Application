<Page
    x:Class="MTM_Receiving_Application.Module_Receiving.Views.Wizard.Step1.View_Receiving_Wizard_Display_Step1Container"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:MTM_Receiving_Application.Module_Receiving.Views.Wizard.Step1"
    mc:Ignorable="d"
    Background="Transparent">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Padding="24,16" MaxWidth="1350" HorizontalAlignment="Center">
            <StackPanel Spacing="16">
                <!-- Page Title -->
                <StackPanel Spacing="4" Margin="0,0,0,4">
                    <TextBlock Text="Step 1: Order &amp; Part Information" 
                               Style="{StaticResource TitleTextBlockStyle}" />
                    <TextBlock Text="Enter PO number to load parts, then select the part from the list below." 
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                               FontSize="12"
                               TextWrapping="Wrap" />
                </StackPanel>

                <!-- Card 1: Purchase Order Number -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel Spacing="12">
                        <StackPanel Spacing="2">
                            <TextBlock Text="Purchase Order Number" 
                                       Style="{StaticResource SubtitleTextBlockStyle}" />
                            <TextBlock Text="Enter or scan the PO number" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       FontSize="11" />
                        </StackPanel>
                        <local:View_Receiving_Wizard_Display_PONumberEntry x:Name="PONumberEntry" x:FieldModifier="public" />
                    </StackPanel>
                </Border>

                <!-- Card 2: Part Selection with Package Type -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel Spacing="12">
                        <StackPanel Spacing="2">
                            <TextBlock Text="Part Selection &amp; Package Type" 
                                       Style="{StaticResource SubtitleTextBlockStyle}" />
                            <TextBlock Text="Select part from list - package type auto-detects but can be overridden" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       FontSize="11" />
                        </StackPanel>
                        <local:View_Receiving_Wizard_Display_PartSelection x:Name="PartSelection" x:FieldModifier="public" />
                    </StackPanel>
                </Border>

                <!-- Card 3: Number of Loads -->
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel Spacing="12">
                        <StackPanel Spacing="2">
                            <TextBlock Text="Number of Loads" 
                                       Style="{StaticResource SubtitleTextBlockStyle}" />
                            <TextBlock Text="How many loads? (1-999)" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                       FontSize="11" />
                        </StackPanel>
                        <local:View_Receiving_Wizard_Display_LoadCountEntry x:Name="LoadCountEntry" x:FieldModifier="public" />
                    </StackPanel>
                </Border>

                <!-- Card 4: Summary Panel -->
                <Border Background="{ThemeResource AccentFillColorSecondaryBrush}"
                        BorderBrush="{ThemeResource AccentControlElevationBorderBrush}"
                        BorderThickness="1"
                        CornerRadius="8"
                        Padding="20">
                    <StackPanel Spacing="8">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <FontIcon Glyph="&#xE8FD;" Foreground="{ThemeResource AccentTextFillColorPrimaryBrush}" FontSize="18" />
                            <TextBlock Text="Step 1 Summary" 
                                       FontWeight="SemiBold" 
                                       FontSize="15"
                                       Foreground="{ThemeResource TextFillColorPrimaryBrush}" />
                        </StackPanel>
                        <local:View_Receiving_Wizard_Display_Step1Summary x:Name="Step1Summary" />
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
