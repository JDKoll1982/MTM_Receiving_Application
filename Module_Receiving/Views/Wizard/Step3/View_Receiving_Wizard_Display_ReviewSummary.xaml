<UserControl
    x:Class="MTM_Receiving_Application.Module_Receiving.Views.Wizard.Step3.View_Receiving_Wizard_Display_ReviewSummary"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Transaction Summary Header -->
        <Grid Grid.Row="0" Padding="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Spacing="4">
                <TextBlock Text="PO Number:" FontWeight="SemiBold" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                <TextBlock Text="{x:Bind ViewModel.PoNumber, Mode=OneWay}" FontSize="16" />
            </StackPanel>

            <StackPanel Grid.Column="1" Spacing="4">
                <TextBlock Text="Part Number:" FontWeight="SemiBold" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                <TextBlock Text="{x:Bind ViewModel.PartNumber, Mode=OneWay}" FontSize="16" />
            </StackPanel>

            <StackPanel Grid.Column="2" Spacing="4">
                <TextBlock Text="Total Loads:" FontWeight="SemiBold" FontSize="12" Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                <TextBlock Text="{x:Bind ViewModel.TotalLoads, Mode=OneWay}" FontSize="16" />
            </StackPanel>
        </Grid>

        <!-- Load Details Table (Read-Only) -->
        <ScrollViewer Grid.Row="1" HorizontalScrollMode="Auto" VerticalScrollMode="Auto">
            <ItemsRepeater ItemsSource="{x:Bind ViewModel.LoadsReadOnly, Mode=OneWay}">
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}" BorderThickness="0,0,0,1" Padding="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="140" />
                                    <ColumnDefinition Width="140" />
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="120" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" VerticalAlignment="Center" />
                                <TextBlock Grid.Column="1" VerticalAlignment="Center" />
                                <TextBlock Grid.Column="2" VerticalAlignment="Center" />
                                <TextBlock Grid.Column="3" VerticalAlignment="Center" />
                                <TextBlock Grid.Column="4" VerticalAlignment="Center" />
                                <TextBlock Grid.Column="5" VerticalAlignment="Center" />
                                <TextBlock Grid.Column="6" VerticalAlignment="Center" />
                                <TextBlock Grid.Column="7" VerticalAlignment="Center" />
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
        </ScrollViewer>

        <!-- Totals Panel -->
        <Border Grid.Row="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="20" Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Spacing="4">
                    <TextBlock Text="Total Weight:" FontWeight="SemiBold" />
                    <TextBlock Text="{x:Bind ViewModel.TotalWeight, Mode=OneWay}" FontSize="20" />
                </StackPanel>

                <StackPanel Grid.Column="1" Spacing="4">
                    <TextBlock Text="Total Packages:" FontWeight="SemiBold" />
                    <TextBlock Text="{x:Bind ViewModel.TotalPackages, Mode=OneWay}" FontSize="20" />
                </StackPanel>

                <StackPanel Grid.Column="2" Spacing="4">
                    <TextBlock Text="Total Quantity:" FontWeight="SemiBold" />
                    <TextBlock Text="{x:Bind ViewModel.TotalQuantity, Mode=OneWay}" FontSize="20" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
