<Page
    x:Class="Module_UI_Mockup.Views.View_UI_Mockup_Patterns"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    mc:Ignorable="d"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

    <ScrollViewer>
        <StackPanel Padding="40" Spacing="24">
            <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Design Elements &amp; App Patterns"/>

            <!-- Typography -->
            <StackPanel Spacing="16">
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Typography Ramp"/>
                <StackPanel Spacing="4">
                    <TextBlock Text="Title Large" Style="{StaticResource TitleLargeTextBlockStyle}"/>
                    <TextBlock Text="Title" Style="{StaticResource TitleTextBlockStyle}"/>
                    <TextBlock Text="Subtitle" Style="{StaticResource SubtitleTextBlockStyle}"/>
                    <TextBlock Text="Body Strong" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                    <TextBlock Text="Body" Style="{StaticResource BodyTextBlockStyle}"/>
                    <TextBlock Text="Caption" Style="{StaticResource CaptionTextBlockStyle}"/>
                </StackPanel>
            </StackPanel>

            <!-- Colors -->
            <StackPanel Spacing="16">
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Color Palette"/>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Border Background="{ThemeResource AccentFillColorDefaultBrush}" Width="60" Height="60" CornerRadius="8">
                        <TextBlock Text="Accent" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="10"/>
                    </Border>
                    <Border Background="{ThemeResource SystemFillColorSuccessBrush}" Width="60" Height="60" CornerRadius="8">
                        <TextBlock Text="Success" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="10"/>
                    </Border>
                    <Border Background="{ThemeResource SystemFillColorCautionBrush}" Width="60" Height="60" CornerRadius="8">
                        <TextBlock Text="Warning" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="10"/>
                    </Border>
                    <Border Background="{ThemeResource SystemFillColorCriticalBrush}" Width="60" Height="60" CornerRadius="8">
                        <TextBlock Text="Error" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" FontSize="10"/>
                    </Border>
                </StackPanel>
            </StackPanel>

            <!-- Spacing System -->
            <StackPanel Spacing="16">
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Spacing System (4px Grid)"/>
                <TextBlock Text="4px, 8px, 12px, 16px, 24px, 32px" Style="{StaticResource CaptionTextBlockStyle}"/>
            </StackPanel>

            <!-- Card Pattern -->
            <StackPanel Spacing="16">
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Card Pattern"/>
                <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Padding="16" MaxWidth="400" HorizontalAlignment="Left">
                    <StackPanel Spacing="8">
                        <TextBlock Text="Card Title" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                        <TextBlock Text="Cards provide elevation and grouping for related content." TextWrapping="Wrap"/>
                        <Button Content="Action" Style="{StaticResource AccentButtonStyle}" HorizontalAlignment="Right"/>
                    </StackPanel>
                </Border>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
