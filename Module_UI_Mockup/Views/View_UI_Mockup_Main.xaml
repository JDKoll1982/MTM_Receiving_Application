<Page
    x:Class="Module_UI_Mockup.Views.View_UI_Mockup_Main"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Padding="40" Spacing="32">
            <!-- Header -->
            <StackPanel Spacing="8">
                <TextBlock
                    Style="{StaticResource TitleLargeTextBlockStyle}"
                    Text="WinUI 3 Control Gallery"/>
                <TextBlock
                    Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                    Style="{StaticResource BodyTextBlockStyle}"
                    Text="Complete reference for all WinUI 3 controls and design patterns used in MTM manufacturing applications"
                    TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Quick Navigation Cards -->
            <StackPanel Spacing="16">
                <TextBlock
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    Text="Quick Navigation"/>

                <ItemsRepeater ItemsSource="{x:Bind ViewModel.QuickNavItems, Mode=OneWay}">
                    <ItemsRepeater.Layout>
                        <UniformGridLayout
                            ItemsStretch="Fill"
                            MinColumnSpacing="16"
                            MinItemHeight="120"
                            MinItemWidth="280"
                            MinRowSpacing="16"/>
                    </ItemsRepeater.Layout>

                    <ItemsRepeater.ItemTemplate>
                        <DataTemplate>
                            <Button
                                Click="QuickNavCard_Click"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="0">
                                <Border
                                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="8">
                                    <Grid Padding="16" RowSpacing="8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Icon -->
                                    <FontIcon
                                        Grid.Row="0"
                                        FontSize="24"
                                        Foreground="{ThemeResource AccentFillColorDefaultBrush}"
                                        Glyph="{Binding IconGlyph}"/>

                                    <!-- Title -->
                                    <TextBlock
                                        Grid.Row="1"
                                        Style="{StaticResource BodyStrongTextBlockStyle}"
                                        Text="{Binding Title}"/>

                                    <!-- Description -->
                                    <TextBlock
                                        Grid.Row="2"
                                        Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                        Style="{StaticResource CaptionTextBlockStyle}"
                                        Text="{Binding Description}"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="Wrap"/>
                                    </Grid>
                                </Border>
                            </Button>
                        </DataTemplate>
                    </ItemsRepeater.ItemTemplate>
                </ItemsRepeater>
            </StackPanel>

            <!-- Features Section -->
            <StackPanel Spacing="16">
                <TextBlock
                    Style="{StaticResource SubtitleTextBlockStyle}"
                    Text="Features"/>

                <StackPanel Spacing="8">
                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <FontIcon
                            Grid.Column="0"
                            FontSize="16"
                            Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                            Glyph="&#xE73E;"/>
                        <TextBlock
                            Grid.Column="1"
                            Text="150+ WinUI 3 controls across 12 categories"
                            TextWrapping="Wrap"/>
                    </Grid>

                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <FontIcon
                            Grid.Column="0"
                            FontSize="16"
                            Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                            Glyph="&#xE73E;"/>
                        <TextBlock
                            Grid.Column="1"
                            Text="34 custom manufacturing-specific controls"
                            TextWrapping="Wrap"/>
                    </Grid>

                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <FontIcon
                            Grid.Column="0"
                            FontSize="16"
                            Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                            Glyph="&#xE73E;"/>
                        <TextBlock
                            Grid.Column="1"
                            Text="Dark/Light/High Contrast theme support"
                            TextWrapping="Wrap"/>
                    </Grid>

                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <FontIcon
                            Grid.Column="0"
                            FontSize="16"
                            Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                            Glyph="&#xE73E;"/>
                        <TextBlock
                            Grid.Column="1"
                            Text="Touch-friendly with 44Ã—44 minimum targets"
                            TextWrapping="Wrap"/>
                    </Grid>

                    <Grid ColumnSpacing="12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <FontIcon
                            Grid.Column="0"
                            FontSize="16"
                            Foreground="{ThemeResource SystemFillColorSuccessBrush}"
                            Glyph="&#xE73E;"/>
                        <TextBlock
                            Grid.Column="1"
                            Text="100% standalone and portable to any WinUI 3 project"
                            TextWrapping="Wrap"/>
                    </Grid>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
