<Page
    x:Class="Module_UI_Mockup.Views.View_UI_Mockup_CustomControls"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    mc:Ignorable="d"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

    <ScrollViewer>
        <StackPanel Padding="40" Spacing="24">
            <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Custom Manufacturing Controls"/>

            <TextBlock Text="34 custom controls organized by category:" Style="{StaticResource SubtitleTextBlockStyle}"/>

            <!-- Foundation Controls -->
            <StackPanel Spacing="16">
                <TextBlock Text="Foundation (4)" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                <TextBlock Text="• MetricCard - Display key metrics with trend indicators" Style="{StaticResource CaptionTextBlockStyle}"/>
                <TextBlock Text="• StatusBadge - Status indicator with color coding" Style="{StaticResource CaptionTextBlockStyle}"/>
                <TextBlock Text="• PartHeader - Part information display header" Style="{StaticResource CaptionTextBlockStyle}"/>
                <TextBlock Text="• POSummaryCard - Purchase order summary card" Style="{StaticResource CaptionTextBlockStyle}"/>
            </StackPanel>

            <!-- Input Controls -->
            <StackPanel Spacing="16">
                <TextBlock Text="Input (9)" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                <TextBlock Text="• QuantityInput, SearchBox, DateRangePicker, BarcodeInput" Style="{StaticResource CaptionTextBlockStyle}"/>
                <TextBlock Text="• SignaturePad, Stepper, ColorPicker, TagInput, FileUploader" Style="{StaticResource CaptionTextBlockStyle}"/>
            </StackPanel>

            <!-- Display Controls -->
            <StackPanel Spacing="16">
                <TextBlock Text="Display (6)" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                <TextBlock Text="• DataTable, WizardStep, Timeline, Carousel, Breadcrumb, AvatarGroup" Style="{StaticResource CaptionTextBlockStyle}"/>
            </StackPanel>

            <!-- Action Controls -->
            <StackPanel Spacing="16">
                <TextBlock Text="Actions (3)" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                <TextBlock Text="• ActionButton, CustomSplitButton, SegmentedControl" Style="{StaticResource CaptionTextBlockStyle}"/>
            </StackPanel>

            <!-- Feedback Controls -->
            <StackPanel Spacing="16">
                <TextBlock Text="Feedback (6)" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                <TextBlock Text="• SkeletonLoader, ToastNotification, EmptyState, LoadingOverlay" Style="{StaticResource CaptionTextBlockStyle}"/>
                <TextBlock Text="• AlertBanner, SplashScreen" Style="{StaticResource CaptionTextBlockStyle}"/>
            </StackPanel>

            <!-- Navigation Controls -->
            <StackPanel Spacing="16">
                <TextBlock Text="Navigation (6)" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                <TextBlock Text="• NavigationCard, EmployeePicker, CustomContextMenu" Style="{StaticResource CaptionTextBlockStyle}"/>
                <TextBlock Text="• OnboardingTour, KeyboardShortcuts, RichTextEditor" Style="{StaticResource CaptionTextBlockStyle}"/>
            </StackPanel>

            <TextBlock Text="Custom controls will be implemented in Epic 5" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>

        </StackPanel>
    </ScrollViewer>
</Page>
