<Page
    x:Class="Module_UI_Mockup.Views.View_UI_Mockup_DateTime"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    mc:Ignorable="d"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

    <ScrollViewer>
        <StackPanel Padding="40" Spacing="24">
            <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Date &amp; Time Pickers"/>

            <!-- CalendarDatePicker -->
            <StackPanel Spacing="16">
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="CalendarDatePicker"/>
                <CalendarDatePicker Header="Delivery Date" PlaceholderText="Select date" Date="{x:Bind ViewModel.DeliveryDate, Mode=TwoWay}" Width="300" HorizontalAlignment="Left"/>
            </StackPanel>

            <!-- CalendarView -->
            <StackPanel Spacing="16">
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="CalendarView"/>
                <CalendarView SelectionMode="Single"/>
            </StackPanel>

            <!-- DatePicker -->
            <StackPanel Spacing="16">
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="DatePicker"/>
                <DatePicker Header="Start Date" Date="{x:Bind ViewModel.StartDate, Mode=TwoWay}" Width="300" HorizontalAlignment="Left"/>
            </StackPanel>

            <!-- TimePicker -->
            <StackPanel Spacing="16">
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="TimePicker"/>
                <TimePicker Header="Shift Time" Time="{x:Bind ViewModel.ShiftTime, Mode=TwoWay}" Width="300" HorizontalAlignment="Left"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
