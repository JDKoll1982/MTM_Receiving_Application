<Page
    x:Class="Module_UI_Mockup.Views.View_UI_Mockup_Collections"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    mc:Ignorable="d"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

    <ScrollViewer>
        <StackPanel Padding="40" Spacing="24">
            <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Collections &amp; Data Display"/>

            <!-- ListView -->
            <StackPanel Spacing="16">
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="ListView"/>
                <ListView ItemsSource="{x:Bind ViewModel.Items}" SelectionMode="Multiple" Height="200" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>

            <!-- GridView -->
            <StackPanel Spacing="16">
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="GridView"/>
                <GridView ItemsSource="{x:Bind ViewModel.GridItems}" Height="150">
                    <GridView.ItemTemplate>
                        <DataTemplate>
                            <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Width="100" Height="100" CornerRadius="4" Padding="8">
                                <TextBlock Text="{Binding}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </StackPanel>

            <!-- TreeView -->
            <StackPanel Spacing="16">
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="TreeView"/>
                <TreeView Height="200" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1">
                    <TreeView.RootNodes>
                        <TreeViewNode Content="Press Floor">
                            <TreeViewNode.Children>
                                <TreeViewNode Content="Press 1"/>
                                <TreeViewNode Content="Press 2"/>
                                <TreeViewNode Content="Press 3"/>
                            </TreeViewNode.Children>
                        </TreeViewNode>
                        <TreeViewNode Content="Assembly">
                            <TreeViewNode.Children>
                                <TreeViewNode Content="Line A"/>
                                <TreeViewNode Content="Line B"/>
                            </TreeViewNode.Children>
                        </TreeViewNode>
                    </TreeView.RootNodes>
                </TreeView>
            </StackPanel>

            <!-- Expander -->
            <StackPanel Spacing="16">
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Expander"/>
                <Expander Header="Purchase Order Details" IsExpanded="False">
                    <StackPanel Spacing="8" Padding="16">
                        <TextBlock Text="PO Number: PO-123456"/>
                        <TextBlock Text="Vendor: Acme Corp"/>
                        <TextBlock Text="Total Items: 25"/>
                    </StackPanel>
                </Expander>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
