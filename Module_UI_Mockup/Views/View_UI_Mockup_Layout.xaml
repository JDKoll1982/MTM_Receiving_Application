<Page
    x:Class="Module_UI_Mockup.Views.View_UI_Mockup_Layout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    mc:Ignorable="d"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

    <ScrollViewer>
        <StackPanel Padding="40" Spacing="24">
            <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Layout Containers &amp; Panels"/>

            <!-- Grid -->
            <StackPanel Spacing="16">
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Grid"/>
                <Grid BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" RowSpacing="4" ColumnSpacing="4" Padding="4" Height="150">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Row="0" Grid.Column="0" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="4"/>
                    <Border Grid.Row="0" Grid.Column="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="4"/>
                    <Border Grid.Row="0" Grid.Column="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" CornerRadius="4"/>
                    <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Background="{ThemeResource AccentFillColorDefaultBrush}" CornerRadius="4"/>
                </Grid>
            </StackPanel>

            <!-- StackPanel -->
            <StackPanel Spacing="16">
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="StackPanel"/>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Width="80" Height="40" CornerRadius="4"/>
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Width="80" Height="40" CornerRadius="4"/>
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Width="80" Height="40" CornerRadius="4"/>
                </StackPanel>
            </StackPanel>

            <!-- Border with CornerRadius -->
            <StackPanel Spacing="16">
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Border (Rounded Corners)"/>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Width="60" Height="60" CornerRadius="4" Padding="8">
                        <TextBlock Text="4px" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Width="60" Height="60" CornerRadius="8" Padding="8">
                        <TextBlock Text="8px" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" Width="60" Height="60" CornerRadius="12" Padding="8">
                        <TextBlock Text="12px" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </StackPanel>
            </StackPanel>

            <!-- SplitView -->
            <StackPanel Spacing="16">
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="SplitView"/>
                <SplitView IsPaneOpen="True" DisplayMode="Inline" PaneBackground="{ThemeResource LayerFillColorDefaultBrush}" OpenPaneLength="200" Height="200">
                    <SplitView.Pane>
                        <StackPanel Padding="16" Spacing="8">
                            <TextBlock Text="Navigation Pane"/>
                            <TextBlock Text="Item 1"/>
                            <TextBlock Text="Item 2"/>
                            <TextBlock Text="Item 3"/>
                        </StackPanel>
                    </SplitView.Pane>
                    <SplitView.Content>
                        <Grid Padding="16">
                            <TextBlock Text="Main Content Area" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Grid>
                    </SplitView.Content>
                </SplitView>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
