<Page
    x:Class="Module_UI_Mockup.Views.View_UI_Mockup_BasicInput"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    mc:Ignorable="d"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

    <ScrollViewer>
        <StackPanel Padding="40" Spacing="24">
            <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Basic Input Controls"/>

            <!-- Buttons -->
            <StackPanel Spacing="16">
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Buttons"/>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button Content="Standard"/>
                    <Button Content="Accent" Style="{StaticResource AccentButtonStyle}"/>
                    <Button Content="Disabled" IsEnabled="False"/>
                </StackPanel>
            </StackPanel>

            <!-- ToggleButton -->
            <StackPanel Spacing="16">
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="ToggleButton"/>
                <ToggleButton Content="Toggle Me" IsChecked="{x:Bind ViewModel.IsToggled, Mode=TwoWay}"/>
            </StackPanel>

            <!-- RadioButtons -->
            <StackPanel Spacing="16">
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="RadioButtons"/>
                <StackPanel Spacing="8">
                    <RadioButton Content="Option 1" GroupName="Group1" IsChecked="True"/>
                    <RadioButton Content="Option 2" GroupName="Group1"/>
                    <RadioButton Content="Option 3" GroupName="Group1"/>
                </StackPanel>
            </StackPanel>

            <!-- CheckBoxes -->
            <StackPanel Spacing="16">
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="CheckBox"/>
                <StackPanel Spacing="8">
                    <CheckBox Content="Two-state CheckBox" IsChecked="{x:Bind ViewModel.IsChecked, Mode=TwoWay}"/>
                    <CheckBox Content="Three-state CheckBox" IsThreeState="True"/>
                </StackPanel>
            </StackPanel>

            <!-- Slider -->
            <StackPanel Spacing="16">
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="Slider"/>
                <Slider Header="Horizontal Slider" Maximum="100" Minimum="0" Value="{x:Bind ViewModel.SliderValue, Mode=TwoWay}" Width="300" HorizontalAlignment="Left"/>
                <TextBlock Text="{x:Bind ViewModel.SliderValue, Mode=OneWay}"/>
            </StackPanel>

            <!-- ToggleSwitch -->
            <StackPanel Spacing="16">
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="ToggleSwitch"/>
                <ToggleSwitch Header="WiFi" OnContent="On" OffContent="Off" IsOn="{x:Bind ViewModel.IsSwitchOn, Mode=TwoWay}"/>
            </StackPanel>

            <!-- SplitButton -->
            <StackPanel Spacing="16">
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="SplitButton"/>
                <SplitButton Content="Save">
                    <SplitButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="Save As..."/>
                            <MenuFlyoutItem Text="Save All"/>
                        </MenuFlyout>
                    </SplitButton.Flyout>
                </SplitButton>
            </StackPanel>

            <!-- DropDownButton -->
            <StackPanel Spacing="16">
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="DropDownButton"/>
                <DropDownButton Content="Actions">
                    <DropDownButton.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem Text="Edit"/>
                            <MenuFlyoutItem Text="Delete"/>
                            <MenuFlyoutSeparator/>
                            <MenuFlyoutItem Text="Properties"/>
                        </MenuFlyout>
                    </DropDownButton.Flyout>
                </DropDownButton>
            </StackPanel>

            <!-- HyperlinkButton -->
            <StackPanel Spacing="16">
                <TextBlock Style="{StaticResource SubtitleTextBlockStyle}" Text="HyperlinkButton"/>
                <HyperlinkButton Content="Learn more" NavigateUri="https://learn.microsoft.com/windows/apps/winui/"/>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
