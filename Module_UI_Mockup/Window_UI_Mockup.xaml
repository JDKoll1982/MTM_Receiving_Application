<Window
    x:Class="Module_UI_Mockup.Window_UI_Mockup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <!-- Custom Title Bar -->
            <RowDefinition Height="*"/>
            <!-- Content Area -->
            <RowDefinition Height="32"/>
            <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Grid
            x:Name="AppTitleBar"
            Grid.Row="0"
            Background="{ThemeResource LayerFillColorDefaultBrush}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- App Icon (optional) -->
            <Image
                Grid.Column="0"
                Width="16"
                Height="16"
                Margin="16,0,8,0"
                Source="Assets/app-icon.png"
                Visibility="Collapsed"/>
            <!-- Set to Visible if icon exists -->

            <!-- Title Text -->
            <TextBlock
                Grid.Column="1"
                VerticalAlignment="Center"
                Style="{StaticResource CaptionTextBlockStyle}"
                Text="WinUI 3 Control Gallery - MTM Manufacturing"
                TextTrimming="CharacterEllipsis"/>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <TabView
                x:Name="MainTabView"
                CanDragTabs="False"
                CanReorderTabs="False"
                IsAddTabButtonVisible="False"
                TabWidthMode="Equal"
                SelectionChanged="MainTabView_SelectionChanged">

                <!-- Tab 0: Welcome -->
                <TabView.TabItems>
                    <TabViewItem Header="Welcome">
                        <TabViewItem.IconSource>
                            <SymbolIconSource Symbol="Home"/>
                        </TabViewItem.IconSource>
                        <Frame x:Name="WelcomeFrame"/>
                    </TabViewItem>

                    <!-- Tab 1: Basic Input -->
                    <TabViewItem Header="Basic Input">
                        <TabViewItem.IconSource>
                            <SymbolIconSource Symbol="Keyboard"/>
                        </TabViewItem.IconSource>
                        <Frame x:Name="BasicInputFrame"/>
                    </TabViewItem>

                    <!-- Tab 2: Text Controls -->
                    <TabViewItem Header="Text">
                        <TabViewItem.IconSource>
                            <SymbolIconSource Symbol="Font"/>
                        </TabViewItem.IconSource>
                        <Frame x:Name="TextControlsFrame"/>
                    </TabViewItem>

                    <!-- Tab 3: Collections -->
                    <TabViewItem Header="Collections">
                        <TabViewItem.IconSource>
                            <SymbolIconSource Symbol="List"/>
                        </TabViewItem.IconSource>
                        <Frame x:Name="CollectionsFrame"/>
                    </TabViewItem>

                    <!-- Tab 4: Navigation -->
                    <TabViewItem Header="Navigation">
                        <TabViewItem.IconSource>
                            <SymbolIconSource Symbol="Globe"/>
                        </TabViewItem.IconSource>
                        <Frame x:Name="NavigationFrame"/>
                    </TabViewItem>

                    <!-- Tab 5: Dialogs & Flyouts -->
                    <TabViewItem Header="Dialogs">
                        <TabViewItem.IconSource>
                            <SymbolIconSource Symbol="Message"/>
                        </TabViewItem.IconSource>
                        <Frame x:Name="DialogsFrame"/>
                    </TabViewItem>

                    <!-- Tab 6: Date & Time -->
                    <TabViewItem Header="Date and Time">
                        <TabViewItem.IconSource>
                            <SymbolIconSource Symbol="Calendar"/>
                        </TabViewItem.IconSource>
                        <Frame x:Name="DateTimeFrame"/>
                    </TabViewItem>

                    <!-- Tab 7: Media & Visual -->
                    <TabViewItem Header="Media">
                        <TabViewItem.IconSource>
                            <SymbolIconSource Symbol="Pictures"/>
                        </TabViewItem.IconSource>
                        <Frame x:Name="MediaFrame"/>
                    </TabViewItem>

                    <!-- Tab 8: Layout & Panels -->
                    <TabViewItem Header="Layout">
                        <TabViewItem.IconSource>
                            <SymbolIconSource Symbol="View"/>
                        </TabViewItem.IconSource>
                        <Frame x:Name="LayoutFrame"/>
                    </TabViewItem>

                    <!-- Tab 9: Status & Feedback -->
                    <TabViewItem Header="Status">
                        <TabViewItem.IconSource>
                            <SymbolIconSource Symbol="Important"/>
                        </TabViewItem.IconSource>
                        <Frame x:Name="StatusFrame"/>
                    </TabViewItem>

                    <!-- Tab 10: Advanced -->
                    <TabViewItem Header="Advanced">
                        <TabViewItem.IconSource>
                            <SymbolIconSource Symbol="Repair"/>
                        </TabViewItem.IconSource>
                        <Frame x:Name="AdvancedFrame"/>
                    </TabViewItem>

                    <!-- Tab 11: App Patterns -->
                    <TabViewItem Header="Patterns">
                        <TabViewItem.IconSource>
                            <FontIconSource Glyph="&#xE771;"/>
                        </TabViewItem.IconSource>
                        <Frame x:Name="PatternsFrame"/>
                    </TabViewItem>

                    <!-- Tab 12: Custom Controls -->
                    <TabViewItem Header="Custom">
                        <TabViewItem.IconSource>
                            <FontIconSource Glyph="&#xE946;"/>
                        </TabViewItem.IconSource>
                        <Frame x:Name="CustomControlsFrame"/>
                    </TabViewItem>
                </TabView.TabItems>
            </TabView>
        </Grid>

        <!-- Status Bar -->
        <Grid
            Grid.Row="2"
            Background="{ThemeResource LayerFillColorDefaultBrush}"
            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
            BorderThickness="0,1,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Current Tab Name -->
            <TextBlock
                Grid.Column="0"
                Margin="16,0,0,0"
                VerticalAlignment="Center"
                Style="{StaticResource CaptionTextBlockStyle}"
                Text="{x:Bind ViewModel.CurrentTabName, Mode=OneWay}"/>

            <!-- Total Controls Count -->
            <TextBlock
                Grid.Column="1"
                Margin="0,0,16,0"
                VerticalAlignment="Center"
                Style="{StaticResource CaptionTextBlockStyle}"
                Text="Total Controls: 150+"/>
        </Grid>
    </Grid>
</Window>
