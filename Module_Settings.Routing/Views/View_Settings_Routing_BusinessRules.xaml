<Page
    x:Class="MTM_Receiving_Application.Module_Settings.Routing.Views.View_Settings_Routing_BusinessRules"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:MTM_Receiving_Application.Module_Settings.Core.Views.Controls">

    <Grid Padding="24">
        <StackPanel Spacing="12">
            <controls:View_SettingsPlaceholderControl
                TitleText="Routing Business Rules"
                DescriptionText="Placeholder UI for Routing business rules and validation defaults." />

            <Expander Header="Notes (what belongs here)" IsExpanded="True">
                <StackPanel Spacing="8" Padding="0,8,0,0">
                    <TextBlock Text="Suggested controls (from Module_Routing SETTABLE_OBJECTS report):" Style="{StaticResource BodyStrongTextBlockStyle}" />
                    <TextBlock Text="• Enable validation default → ToggleSwitch" Style="{StaticResource BodyTextBlockStyle}" />
                    <TextBlock Text="• Duplicate detection hours (default/min/max) → NumberBox" Style="{StaticResource BodyTextBlockStyle}" />
                    <TextBlock Text="• Infor Visual site/warehouse → TextBox" Style="{StaticResource BodyTextBlockStyle}" />
                </StackPanel>
            </Expander>
        </StackPanel>
    </Grid>
</Page>
