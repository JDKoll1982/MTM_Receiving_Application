<Page
    x:Class="MTM_Receiving_Application.Module_Settings.Routing.Views.View_Settings_Routing_UiUx"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:MTM_Receiving_Application.Module_Settings.Core.Views.Controls">

    <Grid Padding="24">
        <StackPanel Spacing="12">
            <controls:View_SettingsPlaceholderControl
                TitleText="Routing UI / UX"
                DescriptionText="Placeholder UI for Routing UX defaults." />

            <Expander Header="Notes (what belongs here)" IsExpanded="True">
                <StackPanel Spacing="8" Padding="0,8,0,0">
                    <TextBlock Text="Suggested controls (from Module_Routing SETTABLE_OBJECTS report):" Style="{StaticResource BodyStrongTextBlockStyle}" />
                    <TextBlock Text="• Default mode (Wizard/Manual/Edit) → ComboBox / RadioButtons" Style="{StaticResource BodyTextBlockStyle}" />
                    <TextBlock Text="• Personalization threshold → NumberBox" Style="{StaticResource BodyTextBlockStyle}" />
                    <TextBlock Text="• Quick-add button count → NumberBox" Style="{StaticResource BodyTextBlockStyle}" />
                    <TextBlock Text="• History page size → NumberBox" Style="{StaticResource BodyTextBlockStyle}" />
                </StackPanel>
            </Expander>
        </StackPanel>
    </Grid>
</Page>
