<Page
    x:Class="MTM_Receiving_Application.Module_Settings.Routing.Views.View_Settings_Routing_Resilience"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:MTM_Receiving_Application.Module_Settings.Core.Views.Controls">

    <Grid Padding="24">
        <StackPanel Spacing="12">
            <controls:View_SettingsPlaceholderControl
                TitleText="Routing Resilience"
                DescriptionText="Placeholder UI for retry/backoff and resilience-related settings." />

            <Expander Header="Notes (what belongs here)" IsExpanded="True">
                <StackPanel Spacing="8" Padding="0,8,0,0">
                    <TextBlock Text="Suggested controls (from Module_Routing SETTABLE_OBJECTS report):" Style="{StaticResource BodyStrongTextBlockStyle}" />
                    <TextBlock Text="• CSV retry max attempts → NumberBox" Style="{StaticResource BodyTextBlockStyle}" />
                    <TextBlock Text="• CSV retry delay (ms) → NumberBox" Style="{StaticResource BodyTextBlockStyle}" />
                </StackPanel>
            </Expander>
        </StackPanel>
    </Grid>
</Page>
