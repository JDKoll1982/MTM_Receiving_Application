<Page
    x:Class="MTM_Receiving_Application.Module_Settings.Routing.Views.View_Settings_Routing_FileIO"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:MTM_Receiving_Application.Module_Settings.Core.Views.Controls">

    <Grid Padding="24">
        <StackPanel Spacing="12">
            <controls:View_SettingsPlaceholderControl
                TitleText="Routing File I/O"
                DescriptionText="Placeholder UI for Routing export/import paths." />

            <Expander Header="Notes (what belongs here)" IsExpanded="True">
                <StackPanel Spacing="8" Padding="0,8,0,0">
                    <TextBlock Text="Suggested controls (from Module_Routing SETTABLE_OBJECTS report):" Style="{StaticResource BodyStrongTextBlockStyle}" />
                    <TextBlock Text="• CSV export path (network UNC) → TextBox + FolderPicker" Style="{StaticResource BodyTextBlockStyle}" />
                    <TextBlock Text="• Local fallback export path → TextBox + FolderPicker" Style="{StaticResource BodyTextBlockStyle}" />
                    <TextBlock Text="• Reset CSV file paths → TextBox + FolderPicker" Style="{StaticResource BodyTextBlockStyle}" />
                </StackPanel>
            </Expander>
        </StackPanel>
    </Grid>
</Page>
