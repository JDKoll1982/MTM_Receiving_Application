<UserControl
    x:Class="MTM_Receiving_Application.Module_Settings.Views.View_Settings_ModeSelection"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:icons="using:Material.Icons.WinUI3"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Spacing="24" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center" Margin="0,0,0,16">
                <icons:MaterialIcon Kind="Cog" Width="32" Height="32" VerticalAlignment="Center"/>
                <TextBlock Text="Settings" 
                           Style="{StaticResource TitleTextBlockStyle}" 
                           VerticalAlignment="Center"/>
            </StackPanel>
                       
            <ItemsControl HorizontalAlignment="Center">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapGrid Orientation="Horizontal" MaximumRowsOrColumns="4" ItemWidth="220" ItemHeight="160"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.Items>
                    <!-- Receiving Settings Card -->
                    <Button Command="{x:Bind ViewModel.SelectReceivingSettingsCommand}"
                            Width="200" Height="160"
                            Padding="16"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            AutomationProperties.Name="Receiving Settings">
                        <StackPanel Spacing="8" VerticalAlignment="Center">
                            <icons:MaterialIcon Kind="Archive" 
                                              Width="36" Height="36"
                                              Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                            <TextBlock Text="Receiving" 
                                       Style="{StaticResource SubtitleTextBlockStyle}" 
                                       HorizontalAlignment="Center"
                                       FontSize="15"
                                       Margin="0,4,0,0"/>
                            <TextBlock Text="Labels and workflow" 
                                       Style="{StaticResource CaptionTextBlockStyle}" 
                                       TextWrapping="Wrap" 
                                       TextAlignment="Center"
                                       MaxLines="2"
                                       FontSize="11"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Button>

                    <!-- Dunnage Settings Card -->
                    <Button Command="{x:Bind ViewModel.SelectDunnageSettingsCommand}"
                            Width="200" Height="160"
                            Padding="16"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            AutomationProperties.Name="Dunnage Settings">
                        <StackPanel Spacing="8" VerticalAlignment="Center">
                            <icons:MaterialIcon Kind="PackageVariantClosed" 
                                              Width="36" Height="36"
                                              Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                            <TextBlock Text="Dunnage" 
                                       Style="{StaticResource SubtitleTextBlockStyle}" 
                                       HorizontalAlignment="Center"
                                       FontSize="15"
                                       Margin="0,4,0,0"/>
                            <TextBlock Text="Types and inventory" 
                                       Style="{StaticResource CaptionTextBlockStyle}" 
                                       TextWrapping="Wrap" 
                                       TextAlignment="Center"
                                       MaxLines="2"
                                       FontSize="11"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Button>

                    <!-- Shipping Settings Card -->
                    <Button Command="{x:Bind ViewModel.SelectShippingSettingsCommand}"
                            Width="200" Height="160"
                            Padding="16"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            AutomationProperties.Name="Shipping Settings">
                        <StackPanel Spacing="8" VerticalAlignment="Center">
                            <icons:MaterialIcon Kind="TruckDelivery" 
                                              Width="36" Height="36"
                                              Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                            <TextBlock Text="UPS / FedEx" 
                                       Style="{StaticResource SubtitleTextBlockStyle}" 
                                       HorizontalAlignment="Center"
                                       FontSize="15"
                                       Margin="0,4,0,0"/>
                            <TextBlock Text="Carrier integration" 
                                       Style="{StaticResource CaptionTextBlockStyle}" 
                                       TextWrapping="Wrap" 
                                       TextAlignment="Center"
                                       MaxLines="2"
                                       FontSize="11"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Button>

                    <!-- Volvo Settings Card -->
                    <Button Command="{x:Bind ViewModel.SelectVolvoSettingsCommand}"
                            Width="200" Height="160"
                            Padding="16"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            AutomationProperties.Name="Volvo Settings">
                        <StackPanel Spacing="8" VerticalAlignment="Center">
                            <icons:MaterialIcon Kind="Car" 
                                              Width="36" Height="36"
                                              Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                            <TextBlock Text="Volvo" 
                                       Style="{StaticResource SubtitleTextBlockStyle}" 
                                       HorizontalAlignment="Center"
                                       FontSize="15"
                                       Margin="0,4,0,0"/>
                            <TextBlock Text="Customer specific" 
                                       Style="{StaticResource CaptionTextBlockStyle}" 
                                       TextWrapping="Wrap" 
                                       TextAlignment="Center"
                                       MaxLines="2"
                                       FontSize="11"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Button>

                    <!-- Administrative Settings Card -->
                    <Button Command="{x:Bind ViewModel.SelectAdministrativeSettingsCommand}"
                            Width="200" Height="160"
                            Padding="16"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            AutomationProperties.Name="Administrative Settings">
                        <StackPanel Spacing="8" VerticalAlignment="Center">
                            <icons:MaterialIcon Kind="Cog" 
                                              Width="36" Height="36"
                                              Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                            <TextBlock Text="Admin" 
                                       Style="{StaticResource SubtitleTextBlockStyle}" 
                                       HorizontalAlignment="Center"
                                       FontSize="15"
                                       Margin="0,4,0,0"/>
                            <TextBlock Text="System configuration" 
                                       Style="{StaticResource CaptionTextBlockStyle}" 
                                       TextWrapping="Wrap" 
                                       TextAlignment="Center"
                                       MaxLines="2"
                                       FontSize="11"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Button>
                </ItemsControl.Items>
            </ItemsControl>
        </StackPanel>
    </Grid>
</UserControl>
