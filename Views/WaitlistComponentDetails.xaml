<UserControl x:Class="MTM_Waitlist_Application_2._0.Views.WaitlistComponentDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:MTM_Waitlist_Application_2._0.Core.Converters"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="26"
             d:DesignWidth="500"
             mc:Ignorable="d">

            <Grid>                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="25*" />
                    <ColumnDefinition Width="25*" />
                    <ColumnDefinition Width="25*" />
                    <ColumnDefinition Width="25*" />
                </Grid.ColumnDefinitions>
                
                <Button x:Name="RequestCancelButton"
                        Grid.Column="0"
                        Margin="5"
                        FontSize="9"
                        Click="RequestCancelRequest_Click"
                        Content="Cancel Request" />
                
                <Button Grid.Column="1"
                        Margin="5"                        
                        FontSize="9"
                        x:Name="EditRequestButton"
                        Content="Edit Request" />
                
                <Button x:Name="TakeRequestButton"
                        Grid.Column="2"
                        Margin="5"                        
                        FontSize="9"
                        Click="TakeRequestButtonClicked"
                        Content="Take Request" />
                
                <Button x:Name="RequestCompleteButton"
                        Click="RequestCompleteRequest_Click"
                        Grid.Column="3"
                        Margin="5"                        
                        FontSize="9"
                        Content="Complete Request" />

        <TextBlock x:Name="WorkCenter"
                           Text="{Binding WorkCenter}"
                           Visibility="Hidden"/>

        <TextBlock x:Name="RequestID"
                           Text="{Binding Id}"
                           Visibility="Hidden"/>

        <TextBlock x:Name="MHandler"
                           Text="{Binding MHandler}"
                           Visibility="Hidden"/>

        <TextBlock x:Name="RequestType"
                           Text="{Binding RequestType}"
                           Visibility="Hidden"/>

        <TextBlock x:Name="Request"
                           Text="{Binding Request}"
                           Visibility="Hidden"/>

        <TextBlock x:Name="RequestPriority"
                           Text="{Binding RequestPriority}"
                           Visibility="Hidden"/>

        <TextBlock x:Name="TimeRemaining"
                           Text="{Binding TimeRemaining}"
                           Visibility="Hidden"/>

    </Grid>
</UserControl>
