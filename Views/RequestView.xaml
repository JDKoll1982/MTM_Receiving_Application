<UserControl x:Class="MTM_Waitlist_Application_2._0.Views.RequestView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MTM_Waitlist_Application_2._0"
             mc:Ignorable="d"
             d:DesignHeight="550" d:DesignWidth="700">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Submit New Request" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="33*"/>
                <RowDefinition Height="33*"/>
                <RowDefinition Height="33*"/>
                <RowDefinition Height="33*"/>
                <RowDefinition Height="33*"/>
                <RowDefinition Height="33*"/>
                <RowDefinition Height="33*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Column="0" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60*"/>
                    <RowDefinition Height="40*"/>
                </Grid.RowDefinitions>
                <Label Grid.Row ="0" Style="{StaticResource LabelStyle}" Content="Work Center" HorizontalAlignment="Center" FontSize="16" VerticalAlignment="Center"/>
                <ComboBox
                    IsEditable="False"
                    IsTextSearchEnabled="True"
                    Margin="10,0,10,0"
                    Grid.Row="1"
                    x:Name ="CBWorkCenter"
                    Style="{StaticResource ComboBoxStyle}"
                    HorizontalAlignment="Stretch"/>
            </Grid>

            <Grid Grid.Column="1" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60*"/>
                    <RowDefinition Height="40*"/>
                </Grid.RowDefinitions>
                <Label Grid.Row ="0" Style="{StaticResource LabelStyle}" Content="Request Type" HorizontalAlignment="Center" FontSize="16" VerticalAlignment="Center"/>
                <ComboBox 
                    IsEditable="False"
                    IsTextSearchEnabled="True"
                    Margin="10,0,10,0"
                    Grid.Row="1"
                    x:Name ="CBRequestType"
                    Style="{StaticResource ComboBoxStyle}"
                    HorizontalAlignment="Stretch"
                    SelectionChanged="AllocatedTime_Change"
                    IsSynchronizedWithCurrentItem="True"/>
            </Grid>

            <Grid Grid.Column="2" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60*"/>
                    <RowDefinition Height="40*"/>
                </Grid.RowDefinitions>
                <Label Grid.Row ="0" Style="{StaticResource LabelStyle}" Content="Request Priority" HorizontalAlignment="Center" FontSize="16" VerticalAlignment="Center"/>
                <ComboBox
                    IsEditable="False"
                    IsTextSearchEnabled="True"
                    Margin="10,0,10,0"
                    Grid.Row="1"
                    x:Name ="CBRequestPriority"
                    Style="{StaticResource ComboBoxStyle}"
                    HorizontalAlignment="Stretch"
                    SelectionChanged="AllocatedTime_Change"/>
            </Grid>
            <Label Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Style="{StaticResource LabelStyle}" Content="Request Description" HorizontalAlignment="Center" FontSize="16" VerticalAlignment="Top"/>
            <RichTextBox Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Grid.RowSpan="2" Margin="10,30,10,10" x:Name="RTBDescription" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

            <Button Grid.Column="0" Grid.Row="3" Margin="10,10,10,10" Content="Submit Request" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Click="Button_Click"/>
            <Grid Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                    <Label Grid.Row ="3" Style="{StaticResource LabelStyle}" Content="Estimated Required Time:" FontSize="16" HorizontalAlignment="Left" Grid.Column="0"/>
                <Label x:Name ="AllocatedTime" Grid.Row ="3" Style="{StaticResource LabelStyle}" Content="" FontSize="16" HorizontalAlignment="Left" Margin="5,0,0,0" Grid.Column="1"/>
            </Grid>
        </Grid>
    </Grid>



</UserControl>
