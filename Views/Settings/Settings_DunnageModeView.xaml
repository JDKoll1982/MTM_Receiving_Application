<UserControl
    x:Class="MTM_Receiving_Application.Views.Settings.Settings_DunnageModeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:icons="using:Material.Icons.WinUI3"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Spacing="24" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Command="{x:Bind ViewModel.BackCommand}" 
                    Style="{StaticResource AccentButtonStyle}"
                    Margin="0,0,0,16">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE72B;" FontSize="16"/>
                    <TextBlock Text="Back to Settings"/>
                </StackPanel>
            </Button>

            <TextBlock Text="Dunnage Settings" 
                       Style="{StaticResource TitleTextBlockStyle}" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,16"/>

            <ItemsControl HorizontalAlignment="Center">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapGrid Orientation="Horizontal" MaximumRowsOrColumns="4" ItemWidth="220" ItemHeight="160"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.Items>
                    <!-- Types Card -->
                    <Button Command="{x:Bind ViewModel.SelectDunnageTypesCommand}"
                            Width="200" Height="160"
                            Padding="16"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8">
                        <StackPanel Spacing="8" VerticalAlignment="Center">
                            <icons:MaterialIcon Kind="ViewList" 
                                              Width="36" Height="36"
                                              Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                            <TextBlock Text="Types" 
                                       Style="{StaticResource SubtitleTextBlockStyle}" 
                                       HorizontalAlignment="Center"
                                       FontSize="15"/>
                            <TextBlock Text="Manage types and specs" 
                                       Style="{StaticResource CaptionTextBlockStyle}" 
                                       TextWrapping="Wrap" 
                                       TextAlignment="Center"
                                       FontSize="11"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Button>

                    <!-- Inventory Card -->
                    <Button Command="{x:Bind ViewModel.SelectDunnageInventoryCommand}"
                            Width="200" Height="160"
                            Padding="16"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8">
                        <StackPanel Spacing="8" VerticalAlignment="Center">
                            <icons:MaterialIcon Kind="Package" 
                                              Width="36" Height="36"
                                              Foreground="{ThemeResource AccentFillColorDefaultBrush}"/>
                            <TextBlock Text="Inventoried Parts" 
                                       Style="{StaticResource SubtitleTextBlockStyle}" 
                                       HorizontalAlignment="Center"
                                       FontSize="15"/>
                            <TextBlock Text="Track inventory" 
                                       Style="{StaticResource CaptionTextBlockStyle}" 
                                       TextWrapping="Wrap" 
                                       TextAlignment="Center"
                                       FontSize="11"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
                        </StackPanel>
                    </Button>
                </ItemsControl.Items>
            </ItemsControl>
        </StackPanel>
    </Grid>
</UserControl>
