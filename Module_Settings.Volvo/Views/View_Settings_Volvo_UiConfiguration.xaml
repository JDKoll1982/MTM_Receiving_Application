<Page
    x:Class="MTM_Receiving_Application.Module_Settings.Volvo.Views.View_Settings_Volvo_UiConfiguration"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:MTM_Receiving_Application.Module_Settings.Core.Views.Controls">

    <Grid Padding="24">
        <StackPanel Spacing="12">
            <controls:View_SettingsPlaceholderControl
                TitleText="Volvo UI Configuration"
                DescriptionText="Placeholder UI for Volvo UI defaults and list/grid behavior." />

            <Expander Header="Notes (what belongs here)" IsExpanded="True">
                <StackPanel Spacing="8" Padding="0,8,0,0">
                    <TextBlock Text="Suggested controls (from Volvo SETTABLE_OBJECTS.md):" Style="{StaticResource BodyStrongTextBlockStyle}" />
                    <TextBlock Text="• Default history date range (days) → NumberBox" Style="{StaticResource BodyTextBlockStyle}" />
                    <TextBlock Text="• Max search results → NumberBox" Style="{StaticResource BodyTextBlockStyle}" />
                    <TextBlock Text="• Default window size → No UI (core standard), display read-only" Style="{StaticResource BodyTextBlockStyle}" />
                </StackPanel>
            </Expander>
        </StackPanel>
    </Grid>
</Page>
