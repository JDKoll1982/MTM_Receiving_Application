<Page
    x:Class="MTM_Receiving_Application.Module_Settings.Volvo.Views.View_Settings_Volvo_ConnectionStrings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:MTM_Receiving_Application.Module_Settings.Core.Views.Controls">

    <Grid Padding="24">
        <StackPanel Spacing="12">
            <controls:View_SettingsPlaceholderControl
                TitleText="Volvo Connection Strings"
                DescriptionText="Placeholder UI for environment-specific connection strings used by Volvo module." />

            <Expander Header="Notes (what belongs here)" IsExpanded="True">
                <StackPanel Spacing="8" Padding="0,8,0,0">
                    <TextBlock Text="Suggested controls:" Style="{StaticResource BodyStrongTextBlockStyle}" />
                    <TextBlock Text="• MySQL connection string → No UI (deployment/secret store), display read-only with masked value" Style="{StaticResource BodyTextBlockStyle}" />
                    <TextBlock Text="• Copy-to-clipboard (masked) → Button" Style="{StaticResource BodyTextBlockStyle}" />
                </StackPanel>
            </Expander>
        </StackPanel>
    </Grid>
</Page>
