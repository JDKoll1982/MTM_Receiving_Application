<Page
    x:Class="MTM_Receiving_Application.Module_Settings.Volvo.Views.View_Settings_Volvo_FilePaths"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:MTM_Receiving_Application.Module_Settings.Core.Views.Controls">

    <Grid Padding="24">
        <StackPanel Spacing="12">
            <controls:View_SettingsPlaceholderControl
                TitleText="Volvo File Paths"
                DescriptionText="Placeholder UI for default directories used for imports/exports/label generation." />

            <Expander Header="Notes (what belongs here)" IsExpanded="True">
                <StackPanel Spacing="8" Padding="0,8,0,0">
                    <TextBlock Text="Suggested controls (from Volvo SETTABLE_OBJECTS.md):" Style="{StaticResource BodyStrongTextBlockStyle}" />
                    <TextBlock Text="• Default CSV export directory → TextBox + FolderPicker" Style="{StaticResource BodyTextBlockStyle}" />
                    <TextBlock Text="• Default CSV import source → TextBox + FileOpenPicker" Style="{StaticResource BodyTextBlockStyle}" />
                    <TextBlock Text="• Label output directory → TextBox + FolderPicker" Style="{StaticResource BodyTextBlockStyle}" />
                </StackPanel>
            </Expander>
        </StackPanel>
    </Grid>
</Page>
