    <None Include="Documentation\REUSABLE_SERVICES.md" />
    <None Include="Documentation\REUSABLE_SERVICES_SETUP.md" />
    <None Include="Documentation\UPSFEDEXLABELLOGIC-GOOGLEAPPSCRIPTS.md" />
  </ItemGroup>

  <!-- Template Files -->
  <ItemGroup>
    <None Include="Data\_TEMPLATE_Dao_Inventory.txt" />
    <None Include="Data\_TEMPLATE_Dao_User.txt" />
    <None Include="Helpers\_TEMPLATE_Helper_ExportManager.txt" />
    <None Include="Helpers\Database\_TEMPLATE_Helper_Database_StoredProcedure.txt" />
    <None Include="Helpers\Database\_TEMPLATE_Helper_Database_Variables.txt" />
    <None Include="Helpers\Validation\_TEMPLATE_Helper_Validation_ValidatedTextBox.txt" />
