<Window x:Class="MTM_Waitlist_Application_2._0.Windows.Main_Window.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:MTM_Waitlist_Application_2._0"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="MTM Waitlist Application"
        Width="900"
        Height="700"
        ResizeMode="NoResize"
        Background="GhostWhite"
        mc:Ignorable="d">
    <Border Background="White">
        <!--#region Top Bar-->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="26" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Border Grid.Row="0"
                        Grid.ColumnSpan="2"
                        Background="WhiteSmoke"
                        BorderBrush="Black"
                        BorderThickness="0,1,0,1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                    <Grid HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50*"/>
                            <ColumnDefinition Width="50*"/>
                        </Grid.ColumnDefinitions>
                        <!--#region Menu Bar-->

                        <Menu Grid.Column="0" 
                            Grid.Row="0"
                              Width="200"
                              Margin="5,0,0,0"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Center"
                              VerticalContentAlignment="Center"
                              HorizontalContentAlignment="Center"
                              Background="Transparent"
                              BorderThickness="1"
                              FontSize="16"
                              Foreground="Black">

                            <!--#region File-->

                            <MenuItem Header="File">
                                <MenuItem Header="New">
                                    <MenuItem Header="User" Click="NewUserButtonClicked"/>
                                </MenuItem>
                                <MenuItem Header="Exit" Click="ExitButtonClicked" />
                            </MenuItem>

                            <!--#endregion-->

                            <!--#region Edit-->

                            <MenuItem Header="Edit">
                                <MenuItem Header="Undo" />
                                <MenuItem Header="Redo" />
                                <MenuItem Header="Cut" />
                                <MenuItem Header="Copy" />
                                <MenuItem Header="Paste" />
                            </MenuItem>

                            <!--#endregion-->

                            <!--#region View-->

                            <MenuItem Header="View">
                                <MenuItem Header="Home" />
                                <MenuItem Header="Request" />
                                <MenuItem Header="History" />
                                <MenuItem Header="Analytics" />
                                <MenuItem Header="Messenger" />
                            </MenuItem>

                            <!--#endregion-->

                            <!--#region Help-->

                            <MenuItem Header="Help">
                                <MenuItem Header="About" />
                            </MenuItem>

                            <!--#endregion-->

                        </Menu>
                        <Grid Grid.Column="1" HorizontalAlignment="Right">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                                <Button x:Name="HomeButton"
                                        HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                                        Margin="5,0,5,0"
                                        Tag="{x:Static iconPacks:PackIconModernKind.Home}"
                                        ToolTip="Current Requests"
                                        Command="{Binding NavigateToWaitlist}"
                                        Style="{StaticResource SmallButtonTheme}" />

                                <Button x:Name="NewRequestButton"
                                        HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                                        Margin="5,0,5,0"
                                        Tag="{x:Static iconPacks:PackIconModernKind.Page}"
                                        ToolTip="New Request"
                                        Command="{Binding NavigateToRequest}"
                                        Style="{StaticResource SmallButtonTheme}" />

                                <Button x:Name="HistoryButton"
                                        HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                                        Margin="5,0,5,0"
                                        Tag="{x:Static iconPacks:PackIconModernKind.MagnifyBack}"
                                        ToolTip="History"
                                        Command="{Binding NavigateToHistory}"
                                        Style="{StaticResource SmallButtonTheme}" />

                                <Button x:Name="AnalyticsButton"
                                        HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                                        Margin="5,0,5,0"
                                        Tag="{x:Static iconPacks:PackIconModernKind.GraphHistogram}"
                                        ToolTip="Analytics"
                                        Command="{Binding NavigateToAnalytics}"
                                        Style="{StaticResource SmallButtonTheme}" />

                                <Button x:Name="MessengerButton"
                                        HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"
                                        Margin="5,0,5,0"
                                        Tag="{x:Static iconPacks:PackIconModernKind.Message}"
                                        ToolTip="Open Messenger"
                                        Command="{Binding NavigateToMessenger}"
                                        Style="{StaticResource SmallButtonTheme}" />

                            </StackPanel>

                        </Grid>
                        <!--#endregion-->

                    </Grid>
                </Border>

              

            </Grid>

            <!--#endregion-->

            <!--#region Right Panel-->
            <Border Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Background="GhostWhite"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <ContentControl Content="{Binding Navigation.CurrentView}" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch"/>
            </Border>

            <!--#endregion-->

        </Grid>
    </Border>

    <!--#endregion-->
</Window>
