<Window x:Class="MTM_Waitlist_Application_2._0.Windows.UserLogin.UserLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"

        WindowStyle="None"

        ResizeMode="NoResize"
        BorderBrush="Black"
        BorderThickness="1"
        UseLayoutRounding="True"
    WindowStartupLocation="CenterScreen"
        Title="UserLogin" Height="150" Width="300">
    <Grid>
        <Grid x:Name="UserLoginGrid" Visibility="Visible">

            <!--#region Row Definitions -->
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <!--#endregion-->

            <!--#region Title TextBlock -->
            <TextBlock Grid.Row="0" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10 0" Text="User Login"/>
            <!--#endregion-->

            <!--#region User ID Grid -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2.75*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Employee ID:" FontSize="12" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <TextBox x:Name="UserID" Grid.Column="1" FontSize="12" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10 0"/>
            </Grid>
            <!--#endregion-->

            <!--#region User Pin Grid -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2.75*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Employee Pin:" FontSize="12" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <PasswordBox x:Name="UserPin" Grid.Column="1" FontSize="12" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10 0"/>
            </Grid>
            <!--#endregion-->

            <!--#region Button Grid -->
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="Login" FontSize="12" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10 0" Click="LoginButtonClicked"/>
                <Button Grid.Column="1" Content="New User" FontSize="12" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10 0" Click="NewUserButtonClicked"/>
                <Button Grid.Column="2" Content="Exit" FontSize="12" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10 0" Click="ExitButtonClicked"/>
            </Grid>
            <!--#endregion-->

        </Grid>

        <Grid x:Name="NewUserGrid" Visibility="Collapsed">

            <!--#region Row Definitions -->
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <!--#endregion-->

            <!--#region Title TextBlock -->
            <TextBlock Grid.Row="0" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10 0" Text="New User Entry"/>
            <!--#endregion-->

            <!--#region User Full Name Grid -->
            <Grid Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2.75*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2.75*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Fist Name:" FontSize="12" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <TextBox x:Name="NewUserFirstName" Grid.Column="1" FontSize="12" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10 0"/>

                <TextBlock Grid.Column="2" Text="Last Name:" FontSize="12" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <TextBox x:Name="NewUserLastName" Grid.Column="3" FontSize="12" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10 0"/>
            </Grid>
            <!--#endregion-->

            <!--#region User Information Grid -->
            <Grid Grid.Row="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2.75*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2.75*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Shift:" FontSize="12" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <ComboBox x:Name="NewUserShift" Grid.Column="1" FontSize="12" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10 3">
                    <ComboBoxItem Content="First"/>
                    <ComboBoxItem Content="Second"/>
                    <ComboBoxItem Content="Third"/>
                    <ComboBoxItem Content="Midweek"/>
                    <ComboBoxItem Content="Weekend"/>
                </ComboBox>
                <TextBlock Grid.Column="2" Text="Role:" FontSize="12" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <ComboBox x:Name="NewUserRole" Grid.Column="3" FontSize="12" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10 3">
                    <ComboBoxItem Content="Operator"/>
                    <ComboBoxItem Content="Material Handler"/>
                    <ComboBoxItem Content="Material Handler Supervisor"/>
                    <ComboBoxItem Content="Setup Supervisor"/>
                    <ComboBoxItem Content="Shift Supervisor"/>
                    <ComboBoxItem Content="Production Supervisor"/>
                    <ComboBoxItem Content="Production Plant Manager"/>
                    <ComboBoxItem Content="Admin"/>


                </ComboBox>
            </Grid>
            <!--#endregion-->

            <!--#region Third Row Grid -->
            <Grid Grid.Row="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2.75*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2.75*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Pin:" FontSize="12" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <PasswordBox x:Name="NewUserPinValidate" Grid.Column="1" FontSize="12" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10 0"/>
                <TextBlock Grid.Column="2" Text="Re-Enter Pin:" FontSize="12" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <PasswordBox x:Name="NewUserPin" Grid.Column="3" FontSize="12" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10 0" PasswordChanged="PasswordChecker"/>

            </Grid>
            <!--#endregion-->

            <!--#region Button Grid -->
            <Grid Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="NewUserSaveButton" Grid.Column="0" Content="Save" FontSize="12" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10 0" Click="NewUserSaveButtonClicked"/>
                <Button x:Name="NewUserBackButton" Grid.Column="2" Content="Back" FontSize="12" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="10 0" Click="NewUserBackButtonClicked"/>
            </Grid>
            <!--#endregion-->

        </Grid>

    </Grid>


</Window>
