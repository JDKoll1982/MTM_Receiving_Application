{
    "markdown-preview-enhanced.plantumlServer": "https://www.plantuml.com/plantuml",
    "editor.fontFamily": "'Fluent System Icons'",
    "editor.fontLigatures": true,
    "github.copilot.chat.codeGeneration.useInstructionFiles": true,
    "chat.useAgentsMdFile": true,
    // Prevent Copilot Chat from pulling in nested agent/workflow guidance from subfolders
    // (e.g., BMAD workflows that explicitly require STOP/WAIT checkpoints).
    "chat.useNestedAgentsMdFiles": false,
    "chat.mcp.access": "all",
    "chat.mcp.discovery.enabled": {
        "claude-desktop": false,
        "windsurf": false,
        "cursor-global": false,
        "cursor-workspace": false
    },
    "sonarlint.connectedMode.project": {
        "connectionId": "john-koll",
        "projectKey": "JDKoll1982_MTM_Receiving_Application"
    },
    "todo-tree.filtering.excludeGlobs": [
        "**/*.md",
        "**/Documentation/**",
        "**/docs/**",
        "**/specs/**",
        "**/_bmad/**",
        "**/_bmad-output/**",
        "**/CODE_REVIEW*.md",
        "**/AGENTS.md",
        "**/README.md",
        "**/*.instructions.md",
        "**/IMPLEMENTATION_SUMMARY.md",
        "**/VALIDATION_REPORT.md"
    ],
    "todo-tree.filtering.includeGlobs": [
        "**/*.cs",
        "**/*.xaml",
        "**/*.csproj",
        "**/*.sql"
    ],
    "files.associations": {
        "**/.github/workflows/*.{yml,yaml}": "yaml",
        "**/Taskfile.{yml,yaml}": "yaml",
        "**/*.instructions.md": "markdown",
        "**/*.prompt.md": "markdown"
    }
}