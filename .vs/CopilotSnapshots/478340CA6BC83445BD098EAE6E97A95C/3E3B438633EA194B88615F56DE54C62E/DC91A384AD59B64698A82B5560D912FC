    <script src="../Shared/mock-data.js"></script>
    <script>
        let currentZone = 'Zone A';
        let currentTaskType = 'All';

        // Populate waitlist table
        function populateWaitlist() {
            const tbody = document.getElementById('waitlistTableBody');
            const emptyState = document.getElementById('emptyState');
            let waitlist = MockData.materialHandlerWaitlist;

            // Apply filters
            if (currentZone !== 'All') {
                waitlist = MockUtils.filterByZone(waitlist, currentZone);
            }
            if (currentTaskType !== 'All') {
                waitlist = MockUtils.filterByTaskType(waitlist, currentTaskType);
            }

            if (waitlist.length === 0) {
                tbody.innerHTML = '';
                emptyState.classList.remove('hidden');
                MockUtils.updateFABVisibility(0);
                return;
            }

            emptyState.classList.add('hidden');
            tbody.innerHTML = waitlist.map((item, index) => {
                const waitStatus = MockUtils.getWaitTimeStatus(item.waitTime, item.timeStandard);
                const waitClass = `wait-${waitStatus}`;
                
                return `
                    <tr data-id="${item.id}">
                        <td>
                            <span class="task-badge ${item.taskTypeColor}">
                                ${item.taskType}
                            </span>
                        </td>
                        <td>
                            <div>
                                <strong>${item.location}</strong>
                                <div style="font-size: var(--font-size-caption); color: var(--text-secondary);">
                                    ${item.zone}
                                </div>
                            </div>
                        </td>
                        <td>
                            <strong>${item.loadNumber}</strong>
                        </td>
                        <td>
                            <small style="color: var(--text-secondary);">${item.details}</small>
                            ${item.partNumber !== 'N/A' ? `<div style="font-size: var(--font-size-caption); color: var(--text-tertiary);">Part: ${item.partNumber}</div>` : ''}
                        </td>
                        <td>
                            <span class="priority-badge priority-${item.priority.toLowerCase()}">
                                ${item.priority}
                            </span>
                        </td>
                        <td>
                            <span class="priority-badge ${waitClass}">
                                ${MockUtils.formatWaitTime(item.waitTime)}
                            </span>
                        </td>
                        <td>
                            <small>${item.requester}</small>
                        </td>
                        <td>
                            <div class="action-buttons">
                                <button class="btn btn-accent" style="padding: 6px 12px; font-size: 12px;" onclick="acceptTask(${item.id})">
                                    <span class="fluent-icon icon-checkmark"></span>
                                    Accept
                                </button>
                                <button class="btn-icon btn-alert" aria-label="Need Help" title="Request Assistance">
                                    <span class="fluent-icon icon-help"></span>
                                </button>
                            </div>
                        </td>
                    </tr>
                `;
            }).join('');

            MockUtils.updateFABVisibility(waitlist.length);
        }

        // Filter waitlist
        function filterWaitlist() {
            currentZone = document.getElementById('zoneFilter').value;
            currentTaskType = document.getElementById('taskTypeFilter').value;
            populateWaitlist();
        }

        // Accept task
        function acceptTask(taskId) {
            console.log('Accepting task:', taskId);
            alert('Task accepted! It will appear in "My Tasks".');
            // In real app, this would call service and refresh
        }

        // Quick Add Dialog
        function openQuickAddDialog() {
            document.getElementById('quickAddDialog').classList.remove('hidden');
            document.getElementById('qaTaskType').focus();
        }

        function closeQuickAddDialog() {
            document.getElementById('quickAddDialog').classList.add('hidden');
            document.getElementById('quickAddForm').reset();
        }

        function submitQuickAdd() {
            const form = document.getElementById('quickAddForm');
            if (!form.checkValidity()) {
                form.reportValidity();
                return;
            }

            console.log('Quick add task:', {
                taskType: document.getElementById('qaTaskType').value,
                location: document.getElementById('qaLocation').value,
                notes: document.getElementById('qaNotes').value
            });

            alert('Task logged successfully! You received credit.');
            closeQuickAddDialog();
        }

        // Settings
        function showSettings(event) {
            event.preventDefault();
            alert('Settings dialog would open here');
        }

        // Update clock
        function updateClock() {
            const now = new Date();
            document.getElementById('currentTime').textContent = now.toLocaleTimeString();
        }

        // Initialize
        window.addEventListener('load', () => {
            populateWaitlist();
            updateClock();
            setInterval(updateClock, 1000);

            document.getElementById('activeCount').textContent = `${MockData.materialHandlerWaitlist.length} active tasks`;
        });
    </script>
</body>
