    <script>
        // Simple analytics tracking (mock)
        const moduleLinks = document.querySelectorAll('.module-card');
        moduleLinks.forEach(link => {
            link.addEventListener('click', (e) => {
                const moduleName = link.querySelector('.module-title').textContent;
                console.log(`Navigating to module: ${moduleName}`);
                // In real analytics, this would send to tracking service
            });
        });

        // Display current date/time
        const updateFooter = () => {
            const footer = document.querySelector('.footer p:last-child');
            const now = new Date();
            footer.innerHTML += `<br><small>Last viewed: ${now.toLocaleString()}</small>`;
        };
        window.addEventListener('load', updateFooter);
    </script>
