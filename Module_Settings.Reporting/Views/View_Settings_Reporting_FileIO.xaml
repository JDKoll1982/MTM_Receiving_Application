<Page
    x:Class="MTM_Receiving_Application.Module_Settings.Reporting.Views.View_Settings_Reporting_FileIO"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:MTM_Receiving_Application.Module_Settings.Core.Views.Controls">

    <Grid Padding="24">
        <StackPanel Spacing="12">
            <controls:View_SettingsPlaceholderControl
                TitleText="Reporting File I/O"
                DescriptionText="Placeholder UI for report export folder and file name pattern settings." />

            <Expander Header="Notes (what belongs here)" IsExpanded="True">
                <StackPanel Spacing="8" Padding="0,8,0,0">
                    <TextBlock Text="Suggested controls (from Module_Reporting SETTABLE_OBJECTS report):" Style="{StaticResource BodyStrongTextBlockStyle}" />
                    <TextBlock Text="• Export folder path → TextBox + FolderPicker" Style="{StaticResource BodyTextBlockStyle}" />
                    <TextBlock Text="• File name template (e.g., EoD_{module}_{timestamp}.csv) → TextBox" Style="{StaticResource BodyTextBlockStyle}" />
                    <TextBlock Text="• Timestamp format (e.g., yyyyMMdd_HHmmss) → TextBox" Style="{StaticResource BodyTextBlockStyle}" />
                </StackPanel>
            </Expander>
        </StackPanel>
    </Grid>
</Page>
