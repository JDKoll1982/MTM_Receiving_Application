<Page
    x:Class="MTM_Receiving_Application.Module_Settings.Reporting.Views.View_Settings_Reporting_Csv"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:MTM_Receiving_Application.Module_Settings.Core.Views.Controls">

    <Grid Padding="24">
        <StackPanel Spacing="12">
            <controls:View_SettingsPlaceholderControl
                TitleText="Reporting CSV"
                DescriptionText="Placeholder UI for CSV formatting and column templates." />

            <Expander Header="Notes (what belongs here)" IsExpanded="True">
                <StackPanel Spacing="8" Padding="0,8,0,0">
                    <TextBlock Text="Suggested controls (from Module_Reporting SETTABLE_OBJECTS report):" Style="{StaticResource BodyStrongTextBlockStyle}" />
                    <TextBlock Text="• CSV date format (yyyy-MM-dd) → TextBox" Style="{StaticResource BodyTextBlockStyle}" />
                    <TextBlock Text="• Headers/columns per module → DataGrid (Module, ColumnName, Order)" Style="{StaticResource BodyTextBlockStyle}" />
                </StackPanel>
            </Expander>
        </StackPanel>
    </Grid>
</Page>
