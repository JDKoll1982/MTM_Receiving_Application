<Page
    x:Class="MTM_Receiving_Application.Module_Settings.Reporting.Views.View_Settings_Reporting_NavigationHub"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewmodels="using:MTM_Receiving_Application.Module_Settings.Reporting.ViewModels"
    xmlns:models="using:MTM_Receiving_Application.Module_Settings.Core.Models">

    <Grid Padding="24" RowSpacing="16" VerticalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" RowSpacing="12" ColumnSpacing="16" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ItemsRepeater ItemsSource="{x:Bind ((viewmodels:ViewModel_Settings_Reporting_NavigationHub)DataContext).VisibleSteps, Mode=OneWay}">
                <ItemsRepeater.Layout>
                    <UniformGridLayout MinItemWidth="280" MinItemHeight="180" MaximumRowsOrColumns="3" Orientation="Horizontal" />
                </ItemsRepeater.Layout>
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate x:DataType="models:Model_SettingsNavigationStep">
                        <Button Click="OnStepClicked"
                                Width="280" Height="180"
                                Padding="20"
                                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1"
                                CornerRadius="8">
                            <StackPanel Spacing="12">
                                <FontIcon Glyph="&#xE8D4;" FontSize="40" Foreground="{ThemeResource AccentFillColorDefaultBrush}" />
                                <TextBlock Text="{x:Bind Title}" Style="{StaticResource SubtitleTextBlockStyle}" HorizontalAlignment="Center" />
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>

            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        Spacing="12"
                        HorizontalAlignment="Center"
                        Visibility="{x:Bind ((viewmodels:ViewModel_Settings_Reporting_NavigationHub)DataContext).IsPaginationVisible, Mode=OneWay}">
                <Button Content="Prev" Click="OnPrevPageClicked" />
                <TextBlock Text="{x:Bind ((viewmodels:ViewModel_Settings_Reporting_NavigationHub)DataContext).CurrentButtonPage, Mode=OneWay}" VerticalAlignment="Center" />
                <TextBlock Text="/" VerticalAlignment="Center" />
                <TextBlock Text="{x:Bind ((viewmodels:ViewModel_Settings_Reporting_NavigationHub)DataContext).TotalButtonPages, Mode=OneWay}" VerticalAlignment="Center" />
                <Button Content="Next" Click="OnNextPageClicked" />
            </StackPanel>
        </Grid>

        <Frame Grid.Row="1" x:Name="NavigationFrame" x:FieldModifier="private" />

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Spacing="12">
            <Button Content="Back" Click="OnBackClicked" Visibility="{x:Bind ((viewmodels:ViewModel_Settings_Reporting_NavigationHub)DataContext).IsBackVisible, Mode=OneWay}" />
            <Button Content="Next" Click="OnNextClicked" Visibility="{x:Bind ((viewmodels:ViewModel_Settings_Reporting_NavigationHub)DataContext).IsNextVisible, Mode=OneWay}" />
            <Button Content="Save" Click="OnSaveClicked" Visibility="{x:Bind ((viewmodels:ViewModel_Settings_Reporting_NavigationHub)DataContext).IsSaveVisible, Mode=OneWay}" />
            <Button Content="Reset" Click="OnResetClicked" Visibility="{x:Bind ((viewmodels:ViewModel_Settings_Reporting_NavigationHub)DataContext).IsResetVisible, Mode=OneWay}" />
            <Button Content="Cancel" Click="OnCancelClicked" Visibility="{x:Bind ((viewmodels:ViewModel_Settings_Reporting_NavigationHub)DataContext).IsCancelVisible, Mode=OneWay}" />
        </StackPanel>
    </Grid>
</Page>
