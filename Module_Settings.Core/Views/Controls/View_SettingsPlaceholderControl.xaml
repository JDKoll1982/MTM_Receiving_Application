<UserControl
    x:Class="MTM_Receiving_Application.Module_Settings.Core.Views.Controls.View_SettingsPlaceholderControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Spacing="4">
            <TextBlock Text="{x:Bind TitleText, Mode=OneWay}" Style="{StaticResource TitleTextBlockStyle}" />
            <TextBlock Text="{x:Bind DescriptionText, Mode=OneWay}" Style="{StaticResource BodyTextBlockStyle}" />
        </StackPanel>

        <Border Grid.Row="1"
                Padding="16"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8">
            <StackPanel Spacing="8">
                <TextBlock Text="Placeholder" Style="{StaticResource SubtitleTextBlockStyle}" />
                <TextBlock Text="This settings page UI has been scaffolded but does not yet implement read/write, validation, caching, or auditing."
                           Style="{StaticResource BodyTextBlockStyle}"
                           TextWrapping="Wrap" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
