<Page
    x:Class="MTM_Receiving_Application.Module_Settings.Core.Views.View_Settings_CoreNavigationHub"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Padding="24" RowSpacing="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Spacing="4">
            <TextBlock Text="Core Settings" Style="{StaticResource TitleTextBlockStyle}" />
            <TextBlock Text="Choose a settings area to configure global defaults and infrastructure options."
                       Style="{StaticResource BodyTextBlockStyle}" />
        </StackPanel>

        <Grid Grid.Row="1" RowSpacing="16" ColumnSpacing="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

                <Button Grid.Row="0" Grid.Column="0"
                    Click="OnNavigateSystem"
                    Width="280" Height="180"
                    Padding="20"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                <StackPanel Spacing="12">
                    <FontIcon Glyph="&#xE713;" FontSize="40" Foreground="{ThemeResource AccentFillColorDefaultBrush}" />
                    <TextBlock Text="System" Style="{StaticResource SubtitleTextBlockStyle}" HorizontalAlignment="Center" />
                    <TextBlock Text="Manage system defaults and core policies."
                               Style="{StaticResource BodyTextBlockStyle}"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>
            </Button>

                <Button Grid.Row="0" Grid.Column="1"
                    Click="OnNavigateUsers"
                    Width="280" Height="180"
                    Padding="20"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                <StackPanel Spacing="12">
                    <FontIcon Glyph="&#xE8D4;" FontSize="40" Foreground="{ThemeResource AccentFillColorDefaultBrush}" />
                    <TextBlock Text="Users &amp; Privileges" Style="{StaticResource SubtitleTextBlockStyle}" HorizontalAlignment="Center" />
                    <TextBlock Text="Control access levels, roles, and privileges."
                               Style="{StaticResource BodyTextBlockStyle}"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>
            </Button>

                <Button Grid.Row="0" Grid.Column="2"
                    Click="OnNavigateTheme"
                    Width="280" Height="180"
                    Padding="20"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                <StackPanel Spacing="12">
                    <FontIcon Glyph="&#xE790;" FontSize="40" Foreground="{ThemeResource AccentFillColorDefaultBrush}" />
                    <TextBlock Text="UI Theme" Style="{StaticResource SubtitleTextBlockStyle}" HorizontalAlignment="Center" />
                    <TextBlock Text="Align visuals, density, and accent styling."
                               Style="{StaticResource BodyTextBlockStyle}"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>
            </Button>

                <Button Grid.Row="1" Grid.Column="0"
                    Click="OnNavigateDatabase"
                    Width="280" Height="180"
                    Padding="20"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                <StackPanel Spacing="12">
                    <FontIcon Glyph="&#xE964;" FontSize="40" Foreground="{ThemeResource AccentFillColorDefaultBrush}" />
                    <TextBlock Text="Database" Style="{StaticResource SubtitleTextBlockStyle}" HorizontalAlignment="Center" />
                    <TextBlock Text="Review connections, procedures, and health."
                               Style="{StaticResource BodyTextBlockStyle}"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>
            </Button>

                <Button Grid.Row="1" Grid.Column="1"
                    Click="OnNavigateLogging"
                    Width="280" Height="180"
                    Padding="20"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                <StackPanel Spacing="12">
                    <FontIcon Glyph="&#xE9F9;" FontSize="40" Foreground="{ThemeResource AccentFillColorDefaultBrush}" />
                    <TextBlock Text="Logging" Style="{StaticResource SubtitleTextBlockStyle}" HorizontalAlignment="Center" />
                    <TextBlock Text="Configure diagnostics and audit trails."
                               Style="{StaticResource BodyTextBlockStyle}"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>
            </Button>

                <Button Grid.Row="1" Grid.Column="2"
                    Click="OnNavigateSharedPaths"
                    Width="280" Height="180"
                    Padding="20"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                <StackPanel Spacing="12">
                    <FontIcon Glyph="&#xE838;" FontSize="40" Foreground="{ThemeResource AccentFillColorDefaultBrush}" />
                    <TextBlock Text="Shared Paths" Style="{StaticResource SubtitleTextBlockStyle}" HorizontalAlignment="Center" />
                    <TextBlock Text="Set shared storage locations and exports."
                               Style="{StaticResource BodyTextBlockStyle}"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                </StackPanel>
            </Button>
        </Grid>
    </Grid>
</Page>
